@{
    ViewData["Title"] = "Erişim Reddedildi";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hastane Yönetim Sistemi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body>
    <div class="error-page">
        <div class="container">
            <div class="row justify-content-center align-items-center min-vh-100">
                <div class="col-md-6 text-center">
                    <div class="error-content">
                        <div class="error-icon mb-4">
                            <i class="fas fa-shield-alt"></i>
                        </div>
                        <h1 class="display-1 fw-bold text-danger">403</h1>
                        <h2 class="mb-3">Erişim Reddedildi</h2>
                        <p class="lead text-muted mb-4">
                            Bu sayfaya erişim yetkiniz bulunmamaktadır. 
                            Bu işlemi gerçekleştirmek için gerekli izinlere sahip değilsiniz.
                        </p>
                        
                        <div class="error-actions">
                            <a href="@Url.Action("Index", "Dashboard")" class="btn btn-primary btn-lg me-3">
                                <i class="fas fa-home me-2"></i>Ana Sayfaya Dön
                            </a>
                            <a href="@Url.Action("Logout", "Auth")" class="btn btn-outline-secondary btn-lg">
                                <i class="fas fa-sign-out-alt me-2"></i>Çıkış Yap
                            </a>
                        </div>
                        
                        <hr class="my-4">
                        
                        <div class="contact-info">
                            <p class="text-muted mb-2">
                                <i class="fas fa-info-circle me-2"></i>
                                Erişim izni için sistem yöneticisi ile iletişime geçin.
                            </p>
                            <p class="text-muted">
                                <i class="fas fa-envelope me-2"></i>
                                <a href="mailto:admin@hospital.com">admin@hospital.com</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        .error-page {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
        }

        .error-content {
            background: white;
            padding: 3rem;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }

        .error-icon i {
            font-size: 5rem;
            color: #dc3545;
            animation: shake 2s infinite;
        }

        @@keyframes shake {
            0%, 100% { transform: translateX(0); }
            25% { transform: translateX(-5px); }
            75% { transform: translateX(5px); }
        }

        .display-1 {
            font-size: 8rem;
            line-height: 1;
        }

        .btn-lg {
            border-radius: 10px;
            padding: 0.75rem 1.5rem;
            font-weight: 600;
        }

        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
        }

        .btn-primary:hover {
            background: linear-gradient(135deg, #5a6fd8 0%, #6a4190 100%);
            transform: translateY(-1px);
        }

        .contact-info a {
            color: #667eea;
            text-decoration: none;
        }

        .contact-info a:hover {
            text-decoration: underline;
        }
    </style>
</body>
</html>
