@{
    ViewData["Title"] = "Giriş Yap";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HMS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

    <style>
        body {
            background: linear-gradient(135deg, #4e73df 0%, #1cc88a 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Segoe UI', sans-serif;
            padding: 1rem;
        }

        .login-wrapper {
            display: flex;
            flex-direction: column;
            gap: 1rem;
            max-width: 450px;
            width: 100%;
        }

        .login-card, .demo-card {
            background: rgba(255,255,255,0.95);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            padding: 2rem;
            box-shadow: 0 10px 40px rgba(0,0,0,0.15);
        }

        .login-logo {
            width: 80px;
            height: 80px;
            margin: 0 auto 1rem;
            background: linear-gradient(135deg, #4e73df, #1cc88a);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 2.2rem;
            box-shadow: 0 4px 15px rgba(78,115,223,0.4);
        }

        .login-title {
            font-weight: bold;
            font-size: 1.8rem;
            color: #4e73df;
        }

        .login-subtitle {
            color: #6c757d;
            margin-bottom: 1.5rem;
        }

        .form-label {
            font-weight: 500;
            margin-bottom: 0.4rem;
            display: block;
        }

        .form-control {
            border-radius: 12px;
            padding: 0.75rem;
            font-size: 1rem;
            border: 1px solid #dee2e6;
            width: 100%;
            box-sizing: border-box;
        }

        .form-control:focus {
            border-color: #4e73df;
            box-shadow: 0 0 0 0.2rem rgba(78,115,223,0.25);
        }

        /* Şifre alanı içine göz ikonu yerleşimi */
        .password-container {
            position: relative;
            width: 100%;
            display: flex;
            align-items: center;
        }

        .password-container input {
            padding-right: 50px; /* ikon için daha fazla boşluk */
            height: 48px;
            width: 100%;
            box-sizing: border-box;
        }

        .password-container .toggle-password {
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            border: none;
            background: none;
            padding: 8px;
            cursor: pointer;
            color: #6c757d;
            font-size: 1.1rem;
            transition: color 0.3s ease;
            z-index: 10;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .password-container .toggle-password:hover {
            color: #4e73df;
        }

        .btn-primary {
            border-radius: 12px;
            padding: 0.75rem 2rem;
            font-weight: 600;
            background: linear-gradient(135deg, #4e73df, #1cc88a);
            border: none;
            min-width: 200px;
        }

        .btn-primary:hover {
            transform: translateY(-1px);
            box-shadow: 0 8px 20px rgba(78,115,223,0.3);
        }

        .demo-title {
            font-size: 0.85rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            font-weight: 600;
            color: #6c757d;
            margin-bottom: 0.8rem;
            text-align: center;
        }

        .demo-info {
            display: block;
            color: #999;
            font-size: 0.7rem;
            margin-top: 0.25rem;
            text-align: center;
        }

        .btn-sm {
            border-radius: 8px;
            font-size: 0.8rem;
            padding: 0.4rem 0.6rem;
        }
    </style>
</head>
<body>
    <div class="login-wrapper">
        <!-- Login Form -->
        <div class="login-card">
            <div class="text-center">
                <div class="login-logo">
                    <i class="fas fa-hospital"></i>
                </div>
                <h2 class="login-title">HMS</h2>
                <p class="login-subtitle">Hastane Yönetim Sistemi</p>
            </div>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    @ViewBag.Error
                </div>
            }

            <form method="post" id="loginForm" action="/login">
                <div class="mb-3">
                    <label for="email" class="form-label">
                        <i class="fas fa-envelope me-2"></i>Email Adresi
                    </label>
                    <input type="email" class="form-control" id="email" name="email" required>
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">
                        <i class="fas fa-lock me-2"></i>Şifre
                    </label>
                    <div class="password-container">
                        <input type="password" class="form-control" id="password" name="password" required>
                        <button type="button" class="toggle-password" onclick="togglePassword()">
                            <i class="fas fa-eye" id="toggleIcon"></i>
                        </button>
                    </div>
                </div>

                <div class="text-center mb-2">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="fas fa-sign-in-alt me-2"></i>Giriş Yap
                    </button>
                </div>
            </form>
        </div>

        <!-- Demo Accounts -->
        <div class="demo-card">
            <h6 class="demo-title">Demo Hesapları (Test İçin)</h6>
            <div class="row g-2 mb-3">
                <div class="col-6">
                    <button class="btn btn-outline-primary btn-sm w-100" onclick="fillDemo('admin@hospital.com', 'admin123')">
                        <i class="fas fa-user-shield me-1"></i>Admin
                    </button>
                    <small class="demo-info">admin@hospital.com / admin123</small>
                </div>
                <div class="col-6">
                    <button class="btn btn-outline-success btn-sm w-100" onclick="fillDemo('doctor@hospital.com', 'doctor123')">
                        <i class="fas fa-user-md me-1"></i>Doktor
                    </button>
                    <small class="demo-info">doctor@hospital.com / doctor123</small>
                </div>
            </div>
            <div class="row g-2">
                <div class="col-6">
                    <button class="btn btn-outline-info btn-sm w-100" onclick="fillDemo('nurse@hospital.com', 'nurse123')">
                        <i class="fas fa-user-nurse me-1"></i>Hemşire
                    </button>
                    <small class="demo-info">nurse@hospital.com / nurse123</small>
                </div>
                <div class="col-6">
                    <button class="btn btn-outline-warning btn-sm w-100" onclick="fillDemo('staff@hospital.com', 'staff123')">
                        <i class="fas fa-user-tie me-1"></i>Personel
                    </button>
                    <small class="demo-info">staff@hospital.com / staff123</small>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function togglePassword() {
            const passwordInput = document.getElementById('password');
            const toggleIcon = document.getElementById('toggleIcon');
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.classList.replace('fa-eye', 'fa-eye-slash');
            } else {
                passwordInput.type = 'password';
                toggleIcon.classList.replace('fa-eye-slash', 'fa-eye');
            }
        }

        function fillDemo(email, password) {
            document.getElementById('email').value = email;
            document.getElementById('password').value = password;
        }
    </script>
</body>
</html>
