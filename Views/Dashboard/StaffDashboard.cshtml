@{
    ViewData["Title"] = "Personel Paneli";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-user-tie text-secondary me-2"></i>Personel Paneli</h2>
                <span class="badge bg-secondary fs-6">Hoş geldiniz, @ViewBag.UserName</span>
            </div>
        </div>
    </div>

    <!-- İstatistik Kartları -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card bg-primary text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h5 class="card-title">Bugünkü Randevular</h5>
                            <h2 class="mb-0">@ViewBag.TodayAppointments</h2>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-calendar-day fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card bg-success text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h5 class="card-title">Hasta Kayıtları</h5>
                            <h2 class="mb-0">@ViewBag.TotalPatients</h2>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-user-plus fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card bg-warning text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h5 class="card-title">Bekleyen İşlemler</h5>
                            <h2 class="mb-0">@ViewBag.PendingTasks</h2>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-hourglass-half fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card bg-info text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h5 class="card-title">Tamamlanan</h5>
                            <h2 class="mb-0">@ViewBag.CompletedTasks</h2>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-check-circle fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Hızlı İşlemler -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-bolt me-2"></i>Personel İşlemleri</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-2">
                            <a href="/User/Create" class="btn btn-primary w-100">
                                <i class="fas fa-user-plus me-2"></i>Hasta Kaydı
                            </a>
                        </div>
                        <div class="col-md-3 mb-2">
                            <a href="/Appointment/Create" class="btn btn-success w-100">
                                <i class="fas fa-calendar-plus me-2"></i>Randevu Al
                            </a>
                        </div>
                        <div class="col-md-3 mb-2">
                            <a href="/User/Index" class="btn btn-info w-100">
                                <i class="fas fa-users me-2"></i>Hasta Listesi
                            </a>
                        </div>
                        <div class="col-md-3 mb-2">
                            <a href="/Appointment/Index" class="btn btn-warning w-100">
                                <i class="fas fa-calendar-alt me-2"></i>Randevu Listesi
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Günlük İşlemler ve Bildirimler -->
    <div class="row">
        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-clipboard-list me-2"></i>Bugünkü İşlemler</h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.TodayAppointments != null && ViewBag.TodayAppointments > 0)
                    {
                        <div class="d-flex justify-content-between align-items-center border-bottom py-2">
                            <div>
                                <h6 class="mb-1">Randevu Kayıtları</h6>
                                <small class="text-muted">Yeni randevu talepleri</small>
                            </div>
                            <span class="badge bg-primary">@ViewBag.TodayAppointments</span>
                        </div>
                        <div class="d-flex justify-content-between align-items-center border-bottom py-2">
                            <div>
                                <h6 class="mb-1">Hasta Kayıtları</h6>
                                <small class="text-muted">Yeni hasta kayıtları</small>
                            </div>
                            <span class="badge bg-success">@ViewBag.TotalPatients</span>
                        </div>
                        <div class="d-flex justify-content-between align-items-center border-bottom py-2">
                            <div>
                                <h6 class="mb-1">Dosya İşlemleri</h6>
                                <small class="text-muted">Hasta dosyası düzenlemeleri</small>
                            </div>
                            <span class="badge bg-info">5</span>
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-4">
                            <i class="fas fa-tasks fa-3x mb-3"></i>
                            <p>Bugün için işlem bulunmuyor.</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-bell me-2"></i>Önemli Bildirimler</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center border-bottom py-2">
                        <div>
                            <h6 class="mb-1">Sistem Güncelleme</h6>
                            <small class="text-muted">Yeni özellikler eklendi</small>
                        </div>
                        <span class="badge bg-info">Yeni</span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center border-bottom py-2">
                        <div>
                            <h6 class="mb-1">Personel Toplantısı</h6>
                            <small class="text-muted">Yarın saat 14:00</small>
                        </div>
                        <span class="badge bg-warning">Yaklaşan</span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center border-bottom py-2">
                        <div>
                            <h6 class="mb-1">Vardiya Değişikliği</h6>
                            <small class="text-muted">Hafta sonu programı</small>
                        </div>
                        <span class="badge bg-secondary">Bilgi</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border: none;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        transition: all 0.15s ease-in-out;
    }

    .card:hover {
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
    }

    .opacity-75 {
        opacity: 0.75;
    }
</style>
