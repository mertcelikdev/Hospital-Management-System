@{
    ViewData["Title"] = "Personel Paneli";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int todayAppointments = ViewBag.TodayAppointments ?? 0;
    int pendingAppointments = ViewBag.PendingAppointments ?? 0;
    int completedAppointments = ViewBag.CompletedAppointments ?? 0;
    int totalPatients = ViewBag.TotalPatients ?? 0;
    int lowStockMedications = ViewBag.LowStockMedications ?? 0;
    var lowStockMedicationList = ViewBag.LowStockMedicationList as IEnumerable<dynamic>;
    var recentAppointments = ViewBag.RecentAppointments as IEnumerable<dynamic>;
    var todaysAppointments = ViewBag.TodaysAppointments as IEnumerable<dynamic>;
}

<div class="container-fluid py-4">
    <div class="d-flex flex-wrap justify-content-between align-items-center mb-4">
        <div>
            <h2 class="h4 mb-1"><i class="fas fa-user-tie text-secondary me-2"></i>Personel Paneli</h2>
            <p class="text-muted mb-0">Hoş geldiniz, @ViewBag.UserName</p>
        </div>
        <div class="text-end small text-muted">
            @DateTime.Now.ToString("dd MMMM yyyy - dddd")
        </div>
    </div>

    <!-- Üst İstatistik Kartları -->
    <div class="row g-4 mb-2">
        <div class="col-sm-6 col-xl-3">
            <div class="card border-0 shadow-sm h-100 stat-card gradient-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <div>
                            <div class="small text-white-50 text-uppercase fw-semibold">Bugünkü Randevular</div>
                            <div class="display-6 fw-bold">@todayAppointments</div>
                        </div>
                        <div class="icon-circle bg-white bg-opacity-25"><i class="fas fa-calendar-day"></i></div>
                    </div>
                    <a href="@Url.Action("Index","Appointment")" class="stretched-link text-white text-decoration-none small">Detaylar <i class="fas fa-arrow-right ms-1"></i></a>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-xl-3">
            <div class="card border-0 shadow-sm h-100 stat-card gradient-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <div>
                            <div class="small text-white-50 text-uppercase fw-semibold">Toplam Hastalar</div>
                            <div class="display-6 fw-bold">@totalPatients</div>
                        </div>
                        <div class="icon-circle bg-white bg-opacity-25"><i class="fas fa-user-injured"></i></div>
                    </div>
                    <a href="@Url.Action("Index","Patient")" class="stretched-link text-white text-decoration-none small">Hasta Listesi <i class="fas fa-arrow-right ms-1"></i></a>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-xl-3">
            <div class="card border-0 shadow-sm h-100 stat-card gradient-warning text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <div>
                            <div class="small text-white-50 text-uppercase fw-semibold">Bekleyen Randevular</div>
                            <div class="display-6 fw-bold">@pendingAppointments</div>
                        </div>
                        <div class="icon-circle bg-white bg-opacity-25"><i class="fas fa-hourglass-half"></i></div>
                    </div>
                    <a href="@Url.Action("Index","Appointment")" class="stretched-link text-white text-decoration-none small">Randevu Yönetimi <i class="fas fa-arrow-right ms-1"></i></a>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-xl-3">
            <div class="card border-0 shadow-sm h-100 stat-card gradient-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <div>
                            <div class="small text-white-50 text-uppercase fw-semibold">Tamamlanan</div>
                            <div class="display-6 fw-bold">@completedAppointments</div>
                        </div>
                        <div class="icon-circle bg-white bg-opacity-25"><i class="fas fa-check-circle"></i></div>
                    </div>
                    <a href="@Url.Action("Index","Appointment")" class="stretched-link text-white text-decoration-none small">Geçmiş Randevular <i class="fas fa-arrow-right ms-1"></i></a>
                </div>
            </div>
        </div>
    </div>

    <!-- Ana Bölüm: Bugünkü Randevular & Hızlı İşlemler -->
    <div class="row g-4">
        <div class="col-lg-3">
            <!-- Sol Menü: Hızlı İşlemler -->
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-bolt me-2"></i>Hızlı İşlemler</h5>
                </div>
                <div class="list-group list-group-flush">
                    <a href="@Url.Action("Create","Appointment")" class="list-group-item list-group-item-action d-flex align-items-center py-3">
                        <i class="fas fa-calendar-plus text-primary me-3 fa-lg"></i>
                        <div>
                            <div class="fw-semibold">Randevu Oluştur</div>
                            <small class="text-muted">Yeni hasta randevusu al</small>
                        </div>
                    </a>
                    <a href="@Url.Action("Create","Patient")" class="list-group-item list-group-item-action d-flex align-items-center py-3">
                        <i class="fas fa-user-plus text-success me-3 fa-lg"></i>
                        <div>
                            <div class="fw-semibold">Hasta Ekle</div>
                            <small class="text-muted">Yeni hasta kaydı oluştur</small>
                        </div>
                    </a>
                    <a href="@Url.Action("Index","Appointment")" class="list-group-item list-group-item-action d-flex align-items-center py-3">
                        <i class="fas fa-calendar-alt text-info me-3 fa-lg"></i>
                        <div>
                            <div class="fw-semibold">Randevu Listesi</div>
                            <small class="text-muted">Tüm randevuları görüntüle</small>
                        </div>
                    </a>
                    <a href="@Url.Action("Index","Patient")" class="list-group-item list-group-item-action d-flex align-items-center py-3">
                        <i class="fas fa-users text-secondary me-3 fa-lg"></i>
                        <div>
                            <div class="fw-semibold">Hasta Listesi</div>
                            <small class="text-muted">Kayıtlı hastaları görüntüle</small>
                        </div>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-lg-9">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-white border-0 d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="fas fa-clock text-primary me-2"></i>Bugünkü Randevular</h5>
                    <a href="@Url.Action("Index","Appointment")" class="btn btn-sm btn-outline-primary">Tümü</a>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Saat</th>
                                <th>Hasta</th>
                                <th>Doktor</th>
                                <th>Tür</th>
                                <th>Durum</th>
                                <th class="text-end">İşlem</th>
                            </tr>
                        </thead>
                        <tbody>
                        @if (todaysAppointments != null && todaysAppointments.Any())
                        {
                            foreach (var appt in todaysAppointments)
                            {
                                var timeProp = appt.GetType().GetProperty("AppointmentDate")?.GetValue(appt) as DateTime?;
                                var statusProp = appt.GetType().GetProperty("Status")?.GetValue(appt)?.ToString();
                                var typeProp = appt.GetType().GetProperty("Type")?.GetValue(appt)?.ToString();
                                var patientIdProp = appt.GetType().GetProperty("PatientId")?.GetValue(appt)?.ToString();
                                var doctorIdProp = appt.GetType().GetProperty("DoctorId")?.GetValue(appt)?.ToString();
                                <tr>
                                    <td class="fw-semibold">@timeProp?.ToLocalTime().ToString("HH:mm")</td>
                                    <td><small>@patientIdProp</small></td>
                                    <td><small>@doctorIdProp</small></td>
                                    <td><span class="badge bg-secondary">@typeProp</span></td>
                                    <td><span class="badge bg-light text-dark border">@statusProp</span></td>
                                    <td class="text-end">
                                        <a class="btn btn-sm btn-outline-secondary" href="@Url.Action("Details","Appointment", new { id = appt.GetType().GetProperty("Id")?.GetValue(appt) })">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr><td colspan="6" class="text-center text-muted py-4">
                                <i class="fas fa-calendar-times fa-2x mb-2"></i>
                                <p class="mb-0">Bugün için randevu yok</p>
                            </td></tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .stat-card { position: relative; overflow: hidden; }
    .stat-card .icon-circle { width: 46px; height:46px; display:flex; align-items:center; justify-content:center; border-radius:50%; font-size:1.2rem; }
    .gradient-primary { background: linear-gradient(135deg,#4e54c8,#8f94fb); }
    .gradient-success { background: linear-gradient(135deg,#11998e,#38ef7d); }
    .gradient-warning { background: linear-gradient(135deg,#f7971e,#ffd200); }
    .gradient-info { background: linear-gradient(135deg,#396afc,#2948ff); }
    .card { border: none; }
    .table > :not(caption) > * > * { vertical-align: middle; }
</style>
