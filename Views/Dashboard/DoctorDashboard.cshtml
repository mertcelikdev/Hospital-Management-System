@{
    ViewData["Title"] = "Doktor Paneli";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-user-md text-success me-2"></i>Doktor Paneli</h2>
                <span class="badge bg-success fs-6">Hoş geldiniz, Dr. @ViewBag.UserName</span>
            </div>
        </div>
    </div>

    <!-- İstatistik Kartları -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card bg-primary text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h5 class="card-title">Bugünkü Randevular</h5>
                            <h2 class="mb-0">@ViewBag.TodayAppointments</h2>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-calendar-day fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card bg-success text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h5 class="card-title">Toplam Hastalarım</h5>
                            <h2 class="mb-0">@ViewBag.TotalPatients</h2>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-users fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card bg-warning text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h5 class="card-title">Bekleyen Randevular</h5>
                            <h2 class="mb-0">@ViewBag.PendingAppointments</h2>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-clock fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card bg-info text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h5 class="card-title">Reçeteler</h5>
                            <h2 class="mb-0">@ViewBag.TotalPrescriptions</h2>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-prescription-bottle fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Hızlı İşlemler -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-bolt me-2"></i>Hızlı İşlemler</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-2">
                            <a href="/Appointment/Create" class="btn btn-primary w-100">
                                <i class="fas fa-plus me-2"></i>Randevu Oluştur
                            </a>
                        </div>
                        <div class="col-md-3 mb-2">
                            <a href="/User/Patients" class="btn btn-success w-100">
                                <i class="fas fa-users me-2"></i>Hastalarım
                            </a>
                        </div>
                        <div class="col-md-3 mb-2">
                            <a href="/Prescription/Create" class="btn btn-info w-100">
                                <i class="fas fa-prescription me-2"></i>Reçete Yaz
                            </a>
                        </div>
                        <div class="col-md-3 mb-2">
                            <a href="/Treatment/Create" class="btn btn-warning w-100">
                                <i class="fas fa-stethoscope me-2"></i>Tedavi Planı
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Son Randevular ve Hastalar -->
    <div class="row">
        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-calendar-alt me-2"></i>Bugünkü Randevular</h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.RecentAppointments != null && ((IEnumerable<dynamic>)ViewBag.RecentAppointments).Any())
                    {
                        @foreach (var appointment in ViewBag.RecentAppointments)
                        {
                            <div class="d-flex justify-content-between align-items-center border-bottom py-2">
                                <div>
                                    <h6 class="mb-1">Hasta ID: @appointment.PatientId</h6>
                                    <small class="text-muted">@appointment.AppointmentDate.ToString("dd.MM.yyyy HH:mm")</small>
                                </div>
                                <span class="badge bg-primary">@appointment.Status</span>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center text-muted py-4">
                            <i class="fas fa-calendar-times fa-3x mb-3"></i>
                            <p>Bugün randevunuz bulunmuyor.</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-user-injured me-2"></i>Son Tedavi Edilen Hastalar</h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.RecentPatients != null && ((IEnumerable<dynamic>)ViewBag.RecentPatients).Any())
                    {
                        @foreach (var patient in ViewBag.RecentPatients)
                        {
                            <div class="d-flex justify-content-between align-items-center border-bottom py-2">
                                <div>
                                    <h6 class="mb-1">@patient.Name</h6>
                                    <small class="text-muted">Son Muayene: @patient.CreatedAt.ToString("dd.MM.yyyy")</small>
                                </div>
                                <a href="/Treatment/Create?patientId=@patient.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-eye"></i>
                                </a>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center text-muted py-4">
                            <i class="fas fa-user-times fa-3x mb-3"></i>
                            <p>Henüz hasta kaydınız bulunmuyor.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border: none;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        transition: all 0.15s ease-in-out;
    }

    .card:hover {
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
    }

    .opacity-75 {
        opacity: 0.75;
    }
</style>
