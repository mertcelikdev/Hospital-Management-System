@{
    ViewData["Title"] = "Hemşire Paneli";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-user-nurse text-info me-2"></i>Hemşire Paneli</h2>
                <span class="badge bg-info fs-6">Hoş geldiniz, @ViewBag.UserName</span>
            </div>
        </div>
    </div>

    <!-- İstatistik Kartları -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card bg-primary text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h5 class="card-title">Bugünkü Görevler</h5>
                            <h2 class="mb-0">@ViewBag.TodayTasks</h2>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-tasks fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card bg-success text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h5 class="card-title">Takip Ettiğim Hastalar</h5>
                            <h2 class="mb-0">@ViewBag.AssignedPatients</h2>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-heartbeat fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card bg-warning text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h5 class="card-title">İlaç Uygulamaları</h5>
                            <h2 class="mb-0">@ViewBag.MedicationSchedules</h2>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-pills fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card bg-danger text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h5 class="card-title">Acil Durumlar</h5>
                            <h2 class="mb-0">@ViewBag.EmergencyCases</h2>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-exclamation-triangle fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Hızlı İşlemler -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-bolt me-2"></i>Hemşire İşlemleri</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-2">
                            <a href="/User/Patients" class="btn btn-primary w-100">
                                <i class="fas fa-user-injured me-2"></i>Hasta Takibi
                            </a>
                        </div>
                        <div class="col-md-3 mb-2">
                            <a href="/Medicine/Index" class="btn btn-success w-100">
                                <i class="fas fa-pills me-2"></i>İlaç Yönetimi
                            </a>
                        </div>
                        <div class="col-md-3 mb-2">
                            <a href="/Appointment/Index" class="btn btn-info w-100">
                                <i class="fas fa-calendar me-2"></i>Randevu Takibi
                            </a>
                        </div>
                        <div class="col-md-3 mb-2">
                            <a href="/Treatment/Index" class="btn btn-warning w-100">
                                <i class="fas fa-notes-medical me-2"></i>Tedavi Notları
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Hemşire Görevleri ve Hasta Takibi -->
    <div class="row">
        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-clipboard-list me-2"></i>Bugünkü Görevlerim</h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.TodayTasks != null && ViewBag.TodayTasks > 0)
                    {
                        <div class="d-flex justify-content-between align-items-center border-bottom py-2">
                            <div>
                                <h6 class="mb-1">Hasta Vital Takibi</h6>
                                <small class="text-muted">08:00 - 16:00</small>
                            </div>
                            <span class="badge bg-primary">Devam Ediyor</span>
                        </div>
                        <div class="d-flex justify-content-between align-items-center border-bottom py-2">
                            <div>
                                <h6 class="mb-1">İlaç Dağıtımı</h6>
                                <small class="text-muted">Her 4 saatte</small>
                            </div>
                            <span class="badge bg-warning">Beklemede</span>
                        </div>
                        <div class="d-flex justify-content-between align-items-center border-bottom py-2">
                            <div>
                                <h6 class="mb-1">Randevu Hazırlığı</h6>
                                <small class="text-muted">Doktor randevuları için</small>
                            </div>
                            <span class="badge bg-success">Tamamlandı</span>
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-4">
                            <i class="fas fa-clipboard-check fa-3x mb-3"></i>
                            <p>Bugün için görev bulunmuyor.</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-users me-2"></i>Takip Ettiğim Hastalar</h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.AssignedPatients != null && ViewBag.AssignedPatients > 0)
                    {
                        <div class="d-flex justify-content-between align-items-center border-bottom py-2">
                            <div>
                                <h6 class="mb-1">Hasta #1</h6>
                                <small class="text-muted">Son kontrol: 2 saat önce</small>
                            </div>
                            <span class="badge bg-success">Stabil</span>
                        </div>
                        <div class="d-flex justify-content-between align-items-center border-bottom py-2">
                            <div>
                                <h6 class="mb-1">Hasta #2</h6>
                                <small class="text-muted">Son kontrol: 4 saat önce</small>
                            </div>
                            <span class="badge bg-warning">Takip</span>
                        </div>
                        <div class="d-flex justify-content-between align-items-center border-bottom py-2">
                            <div>
                                <h6 class="mb-1">Hasta #3</h6>
                                <small class="text-muted">Son kontrol: 6 saat önce</small>
                            </div>
                            <span class="badge bg-info">Kontrol</span>
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-4">
                            <i class="fas fa-user-times fa-3x mb-3"></i>
                            <p>Takip ettiğiniz hasta bulunmuyor.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border: none;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        transition: all 0.15s ease-in-out;
    }

    .card:hover {
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
    }

    .opacity-75 {
        opacity: 0.75;
    }
</style>
