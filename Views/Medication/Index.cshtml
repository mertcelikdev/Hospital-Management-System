@model IEnumerable<HospitalManagementSystem.DTOs.MedicationDto>
@{
    ViewData["Title"] = "İlaç Yönetimi";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <h4 class="page-title">İlaç Yönetimi</h4>
                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="/">Ana Sayfa</a></li>
                        <li class="breadcrumb-item active">İlaçlar</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="header-title mb-0">İlaç Listesi</h4>
                    @if (User.HasClaim("permission", "CanCreateMedications"))
                    {
                        <a href="@Url.Action("Create")" class="btn btn-primary">
                            <i class="mdi mdi-plus me-1"></i> Yeni İlaç Ekle
                        </a>
                    }
                </div>
                <div class="card-body">
                    <!-- Filtreleme -->
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label for="nameFilter" class="form-label">İlaç Adı</label>
                                <input type="text" id="nameFilter" class="form-control" placeholder="İlaç adı ile ara...">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="mb-3">
                                <label for="manufacturerFilter" class="form-label">Üretici</label>
                                <input type="text" id="manufacturerFilter" class="form-control" placeholder="Üretici adı...">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="mb-3">
                                <label for="stockFilter" class="form-label">Stok Durumu</label>
                                <select id="stockFilter" class="form-control">
                                    <option value="">Tümü</option>
                                    <option value="low">Düşük Stok (< 10)</option>
                                    <option value="medium">Normal Stok (10-50)</option>
                                    <option value="high">Yüksek Stok (> 50)</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="mb-3">
                                <label class="form-label">&nbsp;</label>
                                <button type="button" class="btn btn-secondary w-100" onclick="clearFilters()">
                                    <i class="mdi mdi-refresh"></i> Temizle
                                </button>
                            </div>
                        </div>
                    </div>

                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover" id="medicationTable">
                                <thead class="table-light">
                                    <tr>
                                        <th style="width: 5%">#</th>
                                        <th style="width: 25%">İlaç Adı</th>
                                        <th style="width: 15%">Doz</th>
                                        <th style="width: 15%">Üretici</th>
                                        <th style="width: 10%">Stok</th>
                                        <th style="width: 10%">Birim</th>
                                        <th style="width: 10%">Durum</th>
                                        <th style="width: 10%">İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{int index = 1;}
                                    @foreach (var medication in Model)
                                    {
                                        <tr data-name="@medication.Name.ToLower()" 
                                            data-manufacturer="@(medication.Manufacturer?.ToLower())" 
                                            data-stock="@medication.StockQuantity">
                                            <td>@index</td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar-sm bg-light rounded me-2">
                                                        <span class="avatar-title bg-soft-primary text-primary rounded">
                                                            <i class="mdi mdi-pill"></i>
                                                        </span>
                                                    </div>
                                                    <div>
                                                        <h6 class="mb-0">@medication.Name</h6>
                                                        <!-- ActiveIngredient alanı DTO'da yok, kaldırıldı -->
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge bg-info">@medication.Dosage</span>
                                            </td>
                                            <td>@(medication.Manufacturer ?? "Belirtilmemiş")</td>
                                            <td>
                                                @{
                                                    var stockClass = medication.StockQuantity < 10 ? "text-danger" : 
                                                                   medication.StockQuantity < 50 ? "text-warning" : "text-success";
                                                }
                                                <span class="fw-semibold @stockClass">@medication.StockQuantity</span>
                                            </td>
                                            <td>@medication.Unit</td>
                                            <td>
                                                <span class="badge @(medication.IsActive ? "bg-success" : "bg-danger")">
                                                    @(medication.IsActive ? "Aktif" : "Pasif")
                                                </span>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    @if (User.HasClaim("permission", "CanViewMedications"))
                                                    {
                                                        <a href="@Url.Action("Details", new { id = medication.Id })" 
                                                           class="btn btn-sm btn-outline-info" title="Detaylar">
                                                            <i class="mdi mdi-eye"></i>
                                                        </a>
                                                    }
                                                    @if (User.HasClaim("permission", "CanEditMedications"))
                                                    {
                                                        <a href="@Url.Action("Edit", new { id = medication.Id })" 
                                                           class="btn btn-sm btn-outline-warning" title="Düzenle">
                                                            <i class="mdi mdi-pencil"></i>
                                                        </a>
                                                    }
                                                    @if (User.HasClaim("permission", "CanDeleteMedications"))
                                                    {
                                                        <button type="button" class="btn btn-sm btn-outline-danger" 
                                                                onclick="confirmDelete('@medication.Id', '@medication.Name')" title="Sil">
                                                            <i class="mdi mdi-delete"></i>
                                                        </button>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                        index++;
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <div class="avatar-lg mx-auto mb-3">
                                <span class="avatar-title rounded-circle bg-soft-primary text-primary font-20">
                                    <i class="mdi mdi-pill-off"></i>
                                </span>
                            </div>
                            <h5>Henüz İlaç Eklenmemiş</h5>
                            <p class="text-muted">Sisteme ilaç eklemek için "Yeni İlaç Ekle" butonunu kullanın.</p>
                            @if (User.HasClaim("permission", "CanCreateMedications"))
                            {
                                <a href="@Url.Action("Create")" class="btn btn-primary">
                                    <i class="mdi mdi-plus me-1"></i> İlk İlacı Ekle
                                </a>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">İlaç Silme Onayı</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Bu ilacı silmek istediğinizden emin misiniz?</p>
                <p class="text-danger"><strong>Bu işlem geri alınamaz!</strong></p>
                <div id="medicationInfo"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Evet, Sil</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(medicationId, medicationName) {
            const form = document.getElementById('deleteForm');
            form.action = '@Url.Action("Delete")/' + medicationId;
            
            document.getElementById('medicationInfo').innerHTML = 
                '<strong>İlaç:</strong> ' + medicationName;
            
            const modal = new bootstrap.Modal(document.getElementById('deleteModal'));
            modal.show();
        }

        function filterTable() {
            const nameFilter = document.getElementById('nameFilter').value.toLowerCase();
            const manufacturerFilter = document.getElementById('manufacturerFilter').value.toLowerCase();
            const stockFilter = document.getElementById('stockFilter').value;
            
            const rows = document.querySelectorAll('#medicationTable tbody tr');
            
            rows.forEach(row => {
                const name = row.getAttribute('data-name') || '';
                const manufacturer = row.getAttribute('data-manufacturer') || '';
                const stock = parseInt(row.getAttribute('data-stock')) || 0;
                
                let showRow = true;
                
                if (nameFilter && !name.includes(nameFilter)) {
                    showRow = false;
                }
                
                if (manufacturerFilter && !manufacturer.includes(manufacturerFilter)) {
                    showRow = false;
                }
                
                if (stockFilter) {
                    if (stockFilter === 'low' && stock >= 10) showRow = false;
                    if (stockFilter === 'medium' && (stock < 10 || stock > 50)) showRow = false;
                    if (stockFilter === 'high' && stock <= 50) showRow = false;
                }
                
                row.style.display = showRow ? '' : 'none';
            });
        }

        function clearFilters() {
            document.getElementById('nameFilter').value = '';
            document.getElementById('manufacturerFilter').value = '';
            document.getElementById('stockFilter').value = '';
            filterTable();
        }

        // Event listeners
        document.getElementById('nameFilter').addEventListener('input', filterTable);
        document.getElementById('manufacturerFilter').addEventListener('input', filterTable);
        document.getElementById('stockFilter').addEventListener('change', filterTable);
    </script>
}
