@model HospitalManagementSystem.DTOs.CreatePatientDto
@{
    ViewData["Title"] = "Yeni Hasta";
}
<div class="container mt-4">
    <h2>Yeni Hasta Kaydı</h2>
    <hr />
    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-md-4 mb-3">
                <label asp-for="FirstName" class="form-label">Ad</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="col-md-4 mb-3">
                <label asp-for="LastName" class="form-label">Soyad</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="col-md-4 mb-3">
                <label asp-for="TcNo" class="form-label">TC Kimlik No</label>
                <input asp-for="TcNo" class="form-control" maxlength="11" pattern="\d{11}" inputmode="numeric" autocomplete="off" />
                <span asp-validation-for="TcNo" class="text-danger"></span>
                <small class="text-muted">11 hane, sadece rakam.</small>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 mb-3">
                <label asp-for="Email" class="form-label">E-posta</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="col-md-4 mb-3">
                <label asp-for="PhoneNumber" class="form-label">Telefon</label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="col-md-4 mb-3">
                <label asp-for="DateOfBirth" class="form-label">Doğum Tarihi</label>
                <input asp-for="DateOfBirth" type="date" class="form-control" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 mb-3">
                <label asp-for="Gender" class="form-label">Cinsiyet</label>
                <select asp-for="Gender" class="form-select">
                    <option value="">Seçiniz</option>
                    <option value="Male">Erkek</option>
                    <option value="Female">Kadın</option>
                    <option value="Other">Diğer</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="col-md-8 mb-3">
                <label asp-for="Address" class="form-label">Adres</label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 mb-3">
                <label asp-for="EmergencyContactName" class="form-label">Acil Durum Kişisi</label>
                <input asp-for="EmergencyContactName" class="form-control" />
                <span asp-validation-for="EmergencyContactName" class="text-danger"></span>
            </div>
            <div class="col-md-4 mb-3">
                <label asp-for="EmergencyContactPhone" class="form-label">Acil Durum Telefonu</label>
                <input asp-for="EmergencyContactPhone" class="form-control" />
                <span asp-validation-for="EmergencyContactPhone" class="text-danger"></span>
            </div>
            <div class="col-md-4 mb-3">
                <label asp-for="BloodType" class="form-label">Kan Grubu</label>
                <select asp-for="BloodType" class="form-select">
                    <option value="">Seçiniz</option>
                    <option value="0+">0 Rh(+)</option>
                    <option value="0-">0 Rh(-)</option>
                    <option value="A+">A Rh(+)</option>
                    <option value="A-">A Rh(-)</option>
                    <option value="B+">B Rh(+)</option>
                    <option value="B-">B Rh(-)</option>
                    <option value="AB+">AB Rh(+)</option>
                    <option value="AB-">AB Rh(-)</option>
                </select>
                <span asp-validation-for="BloodType" class="text-danger"></span>
            </div>
        </div>
        <div class="mb-3">
            <label>Alerjiler (virgülle ayırın)</label>
            <input name="AllergiesInput" class="form-control" placeholder="Penisilin, Polen" />
        </div>
        <div class="mb-3">
            <label>Kronik Hastalıklar (virgülle ayırın)</label>
            <input name="ChronicInput" class="form-control" placeholder="Hipertansiyon" />
        </div>
        <button type="submit" class="btn btn-primary">Kaydet</button>
        <a asp-action="Index" class="btn btn-secondary">İptal</a>
    </form>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        const tcInput = document.getElementById('TcNo');
        if(tcInput){
            tcInput.addEventListener('input', function(){
                this.value = this.value.replace(/[^0-9]/g,'').slice(0,11);
            });
            tcInput.addEventListener('paste', e=>{
                e.preventDefault();
                const text=(e.clipboardData||window.clipboardData).getData('text');
                const digits = text.replace(/[^0-9]/g,'').slice(0,11);
                document.execCommand('insertText', false, digits);
            });
        }
    </script>
}
