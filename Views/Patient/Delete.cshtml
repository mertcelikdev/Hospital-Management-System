@model HospitalManagementSystem.Models.Patient
@{
    ViewData["Title"] = "Hasta Sil";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-danger text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">
                            <i class="fas fa-exclamation-triangle me-2"></i>Hasta Silme Onayı
                        </h4>
                        <a href="@Url.Action("Index", "Patient")" class="btn btn-light btn-sm">
                            <i class="fas fa-arrow-left me-1"></i>Geri Dön
                        </a>
                    </div>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-warning d-flex align-items-center mb-4" role="alert">
                        <i class="fas fa-exclamation-triangle fa-2x me-3"></i>
                        <div>
                            <h5 class="alert-heading mb-1">Dikkat!</h5>
                            <p class="mb-0">Bu işlem geri alınamaz. Hasta kaydını silmek istediğinizden emin misiniz?</p>
                        </div>
                    </div>

                    <!-- Hasta Bilgileri -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="card-title text-primary">
                                        <i class="fas fa-user me-2"></i>Hasta Bilgileri
                                    </h6>
                                    <table class="table table-sm table-borderless">
                                        <tr>
                                            <td class="fw-semibold">Ad Soyad:</td>
                                            <td>@Model.FullName</td>
                                        </tr>
                                        <tr>
                                            <td class="fw-semibold">TC Kimlik No:</td>
                                            <td>@Model.IdentityNumber</td>
                                        </tr>
                                        <tr>
                                            <td class="fw-semibold">Doğum Tarihi:</td>
                                            <td>@Model.DateOfBirth.ToString("dd.MM.yyyy")</td>
                                        </tr>
                                        <tr>
                                            <td class="fw-semibold">Yaş:</td>
                                            <td>@Model.Age</td>
                                        </tr>
                                        <tr>
                                            <td class="fw-semibold">Cinsiyet:</td>
                                            <td>@Model.Gender</td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="card-title text-success">
                                        <i class="fas fa-phone me-2"></i>İletişim Bilgileri
                                    </h6>
                                    <table class="table table-sm table-borderless">
                                        <tr>
                                            <td class="fw-semibold">Telefon:</td>
                                            <td>@Model.PhoneNumber</td>
                                        </tr>
                                        <tr>
                                            <td class="fw-semibold">E-posta:</td>
                                            <td>@(string.IsNullOrEmpty(Model.Email) ? "Belirtilmemiş" : Model.Email)</td>
                                        </tr>
                                        <tr>
                                            <td class="fw-semibold">Adres:</td>
                                            <td class="text-wrap">@(string.IsNullOrEmpty(Model.Address) ? "Belirtilmemiş" : Model.Address)</td>
                                        </tr>
                                        <tr>
                                            <td class="fw-semibold">Kayıt Tarihi:</td>
                                            <td>@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Sağlık Bilgileri -->
                    @if (!string.IsNullOrEmpty(Model.BloodType) || !string.IsNullOrEmpty(Model.Allergies) || !string.IsNullOrEmpty(Model.ChronicDiseases))
                    {
                        <div class="row mb-4">
                            <div class="col-12">
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <h6 class="card-title text-danger">
                                            <i class="fas fa-heartbeat me-2"></i>Sağlık Bilgileri
                                        </h6>
                                        <div class="row">
                                            @if (!string.IsNullOrEmpty(Model.BloodType))
                                            {
                                                <div class="col-md-4">
                                                    <strong>Kan Grubu:</strong> @Model.BloodType
                                                </div>
                                            }
                                            @if (!string.IsNullOrEmpty(Model.Allergies))
                                            {
                                                <div class="col-md-4">
                                                    <strong>Alerjiler:</strong> @Model.Allergies
                                                </div>
                                            }
                                            @if (!string.IsNullOrEmpty(Model.ChronicDiseases))
                                            {
                                                <div class="col-md-4">
                                                    <strong>Kronik Hastalıklar:</strong> @Model.ChronicDiseases
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Silme Formu -->
                    <form asp-action="DeleteConfirmed" method="post" id="deleteForm">
                        <input asp-for="Id" type="hidden" />
                        
                        <div class="d-flex justify-content-between align-items-center pt-3 border-top">
                            <div>
                                <small class="text-muted">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Bu işlem kalıcıdır ve geri alınamaz.
                                </small>
                            </div>
                            <div>
                                <a href="@Url.Action("Index", "Patient")" class="btn btn-outline-secondary me-2">
                                    <i class="fas fa-times me-1"></i>İptal
                                </a>
                                <a href="@Url.Action("Details", "Patient", new { id = Model.Id })" class="btn btn-outline-primary me-2">
                                    <i class="fas fa-eye me-1"></i>Detayları Gör
                                </a>
                                <button type="submit" class="btn btn-danger" id="deleteBtn">
                                    <i class="fas fa-trash me-1"></i>Sil
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 8px;
    }
    
    .alert {
        border-radius: 8px;
        border: none;
    }
    
    .btn {
        border-radius: 6px;
        font-weight: 500;
    }
    
    .table td {
        padding: 0.25rem 0;
    }
</style>

<script>
    document.getElementById('deleteForm').addEventListener('submit', function(e) {
        e.preventDefault();
        
        if (confirm('Bu hasta kaydını silmek istediğinizden emin misiniz?\n\nBu işlem geri alınamaz!')) {
            const deleteBtn = document.getElementById('deleteBtn');
            deleteBtn.disabled = true;
            deleteBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i>Siliniyor...';
            
            // Submit the form
            this.submit();
        }
    });
</script>
