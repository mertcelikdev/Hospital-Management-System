<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hospital Management System</title>
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    @{
        var userRole = Context.Session.GetString("UserRole");
        var displayName = Context.Session.GetString("UserFullName") ?? Context.Session.GetString("UserName") ?? "";
    }
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-bold" href="@Url.Action("Index", "Dashboard")">>
                    <i class="fas fa-hospital"></i>
                    Hospital MS
                </a>
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("RoleDispatch","Dashboard")"><i class="fas fa-home"></i> Panel</a></li>
                        @if (userRole == "Nurse") {
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("Index","Patient")"><i class="fas fa-user-injured"></i> Hasta Takibi</a></li>
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("Index","Medication")"><i class="fas fa-pills"></i> İlaç Yönetimi</a></li>
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("Index","Appointment")"><i class="fas fa-calendar-alt"></i> Randevular</a></li>
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("Index","PatientNote")"><i class="fas fa-notes-medical"></i> Tedavi Notları</a></li>
                        } else if (userRole == "Doctor") {
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("Index","Patient")"><i class="fas fa-user-injured"></i> Hastalar</a></li>
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("Index","Appointment")"><i class="fas fa-calendar-day"></i> Randevularım</a></li>
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("Index","Prescription")"><i class="fas fa-prescription"></i> Reçeteler</a></li>
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("Index","Treatment")"><i class="fas fa-stethoscope"></i> Tedaviler</a></li>
                        } else if (userRole == "Staff") {
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("Index","Patient")"><i class="fas fa-users"></i> Hastalar</a></li>
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("Index","Appointment")"><i class="fas fa-calendar-alt"></i> Randevular</a></li>
                        } else if (userRole == "Admin") {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"><i class="fas fa-users-cog"></i> Yönetim</a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="@Url.Action("Index","User")"><i class="fas fa-users"></i> Kullanıcılar</a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("Index","Department")"><i class="fas fa-building"></i> Departmanlar</a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("Index","Medication")"><i class="fas fa-pills"></i> İlaçlar</a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("Index","Appointment")"><i class="fas fa-calendar-alt"></i> Randevular</a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("Index","Patient")"><i class="fas fa-user-injured"></i> Hastalar</a></li>
                                </ul>
                            </li>
                        } else if (userRole == "Patient") {
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("Patient","Dashboard")"><i class="fas fa-user"></i> Benim Panelim</a></li>
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("Index","Appointment")"><i class="fas fa-calendar"></i> Randevular</a></li>
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("Index","Prescription")"><i class="fas fa-prescription-bottle"></i> Reçeteler</a></li>
                        }
                    </ul>
                    <ul class="navbar-nav">
                        @if (!string.IsNullOrEmpty(displayName)) {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-user-circle"></i> @displayName <span class="badge bg-dark ms-1">@userRole</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li class="px-3 py-2 small text-muted"><i class="fas fa-id-badge me-1"></i>@userRole</li>
                                    <li><a class="dropdown-item" href="@Url.Action("ChangePassword","Account")"><i class="fas fa-key"></i> Şifre Değiştir</a></li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li>
                                        <form method="post" action="@Url.Action("Logout","Account")" class="px-3">
                                            <button type="submit" class="btn btn-sm btn-danger w-100"><i class="fas fa-sign-out-alt"></i> Çıkış</button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        } else {
                            <li class="nav-item"><a class="nav-link" href="/login"><i class="fas fa-sign-in-alt"></i> Giriş Yap</a></li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <!-- Notification System -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show m-3" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show m-3" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["InfoMessage"] != null)
    {
        <div class="alert alert-info alert-dismissible fade show m-3" role="alert">
            <i class="fas fa-info-circle me-2"></i>@TempData["InfoMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    
    <main class="flex-grow-1">
        @RenderBody()
    </main>
    
    <footer class="bg-light text-center text-muted py-4 mt-5">
        <div class="container">
            <p class="mb-0">
                &copy; 2025 - Hospital Management System - 
                <a href="#" class="text-decoration-none">Privacy</a> | 
                <a href="#" class="text-decoration-none">Terms</a>
            </p>
        </div>
    </footer>
    
    <!-- Bootstrap 5 JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <!-- Custom JS -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
