<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hospital Management System</title>
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <!-- Google Fonts: Figtree -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Figtree:ital,wght@0,300..900;1,300..900&display=swap" rel="stylesheet">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body class="layout-root">
    @{
        var claimsPrincipal = Context.User;
        var userRole = claimsPrincipal?.Claims.FirstOrDefault(c => c.Type == System.Security.Claims.ClaimTypes.Role)?.Value;
        var userNameClaim = claimsPrincipal?.Claims.FirstOrDefault(c => c.Type == System.Security.Claims.ClaimTypes.Name)?.Value;
    }
    <header class="app-navbar-wrapper">
        <nav class="app-navbar">
            <div class="app-navbar-inner">
                @{
                    var userName = userNameClaim;
                    string? dashAction = userRole switch {
                        "Admin" => "AdminDashboard",
                        "Doctor" => "DoctorDashboard",
                        "Nurse" => "NurseDashboard",
                        "Staff" => "StaffDashboard",
                        "Receptionist" => "StaffDashboard",
                        "Patient" => "PatientDashboard",
                        _ => "Index"
                    };
                }
                <a class="brand" href="@Url.Action(dashAction, "Dashboard")">
                    <i class="fas fa-hospital"></i>
                    <span class="brand-text">Hospital MS</span>
                </a>
                <div class="nav-right">
                    @if (!string.IsNullOrEmpty(userName))
                    {
                        <div class="user-chip">@userRole <span class="sep">/</span> @userName</div>
                        <a class="enb-btn ghost" href="@Url.Action("Logout", "Auth")"><i class="fas fa-sign-out-alt"></i><span>Çıkış</span></a>
                    }
                    else
                    {
                        <a class="enb-btn ghost" href="@Url.Action("Login", "Auth")"><i class="fas fa-sign-in-alt"></i><span>Giriş</span></a>
                    }
                </div>
            </div>
        </nav>
    </header>
    
    <!-- Notification System -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show m-3" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show m-3" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["InfoMessage"] != null)
    {
        <div class="alert alert-info alert-dismissible fade show m-3" role="alert">
            <i class="fas fa-info-circle me-2"></i>@TempData["InfoMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    
    <main class="app-main">@RenderBody()</main>
    <footer class="app-footer bg-light text-center text-muted py-3">
        <div class="container">
            <p class="mb-0">
                &copy; 2025 - Hospital Management System - 
                <a href="#" class="text-decoration-none">Privacy</a> | 
                <a href="#" class="text-decoration-none">Terms</a>
            </p>
        </div>
    </footer>
    
    <!-- Bootstrap 5 JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <!-- Custom JS -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
<style>
    .layout-root{min-height:100vh;display:flex;flex-direction:column;}
    .app-main{flex:1 0 auto;display:flex;flex-direction:column;}
    .app-footer{flex-shrink:0;margin-top:auto;}
    .center-page-wrapper{width:100%;max-width:1320px;margin:0 auto;padding:2rem 1.5rem;display:flex;flex-direction:column;gap:1.4rem;}
    @@media (max-width:768px){.center-page-wrapper{padding:1.25rem .9rem;}}
    /* Navbar stilleri tema dosyasına taşındı */
</style>
</body>
</html>
