@model HospitalManagementSystem.Models.Department

@{
    ViewData["Title"] = "Departman Sil";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var users = ViewBag.DepartmentUsers as List<HospitalManagementSystem.Models.User> ?? new List<HospitalManagementSystem.Models.User>();
    var userCount = ViewBag.UserCount as int? ?? 0;
}

<div class="container-fluid">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")" class="text-decoration-none">Ana Sayfa</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Department")" class="text-decoration-none">Departman Yönetimi</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Name - Sil</li>
        </ol>
    </nav>

    <!-- Header -->
    <div class="mb-4">
        <h2 class="h3 mb-0 text-danger">
            <i class="fas fa-exclamation-triangle me-2"></i>Departman Silme Onayı
        </h2>
        <p class="text-muted mb-0">Bu işlem geri alınamaz, lütfen dikkatli olun</p>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <!-- Uyarı Mesajı -->
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>DİKKAT!
                    </h5>
                </div>
                <div class="card-body">
                    <p class="card-text">
                        <strong>@Model.Name (@Model.Code)</strong> departmanını silmek istediğinizden emin misiniz?
                    </p>
                    
                    @if (userCount > 0)
                    {
                        <div class="alert alert-warning">
                            <i class="fas fa-users me-2"></i>
                            <strong>Uyarı:</strong> Bu departmanda <strong>@userCount adet personel</strong> bulunmaktadır. 
                            Departmanı silerseniz bu personellerin departman ataması kaldırılacaktır.
                        </div>
                    }

                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>Not:</strong> Bu işlem departmanı "pasif" duruma getirir. 
                        Tamamen silinmez, ancak yeni atamalar yapılamaz ve listede gri görünür.
                    </div>

                    <h6 class="mt-4">Silinecek departman bilgileri:</h6>
                    <table class="table table-bordered">
                        <tr>
                            <td class="fw-bold" width="30%">Departman Adı:</td>
                            <td>@Model.Name</td>
                        </tr>
                        <tr>
                            <td class="fw-bold">Kod:</td>
                            <td><span class="badge bg-info">@Model.Code</span></td>
                        </tr>
                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            <tr>
                                <td class="fw-bold">Açıklama:</td>
                                <td>@Model.Description</td>
                            </tr>
                        }
                        @if (!string.IsNullOrEmpty(Model.HeadOfDepartment))
                        {
                            <tr>
                                <td class="fw-bold">Bölüm Başkanı:</td>
                                <td>@Model.HeadOfDepartment</td>
                            </tr>
                        }
                        <tr>
                            <td class="fw-bold">Toplam Personel:</td>
                            <td>
                                <span class="badge bg-primary me-1">@Model.DoctorCount Doktor</span>
                                <span class="badge bg-success me-1">@Model.NurseCount Hemşire</span>
                                <span class="badge bg-warning">@Model.StaffCount Personel</span>
                            </td>
                        </tr>
                        <tr>
                            <td class="fw-bold">Oluşturulma:</td>
                            <td>@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                        </tr>
                    </table>
                </div>
            </div>

            <!-- Onay Butonları -->
            <div class="card mt-3">
                <div class="card-body">
                    <form asp-action="Delete" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-danger" 
                                    onclick="return confirm('Bu departmanı silmek istediğinizden kesinlikle emin misiniz? Bu işlem geri alınamaz!')">
                                <i class="fas fa-trash me-1"></i>Evet, Departmanı Sil
                            </button>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">
                                <i class="fas fa-eye me-1"></i>Detayları Görüntüle
                            </a>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times me-1"></i>İptal
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Etkilenecek Personel -->
            @if (users.Any())
            {
                <div class="card">
                    <div class="card-header">
                        <h6 class="card-title mb-0">
                            <i class="fas fa-users me-2"></i>Etkilenecek Personel (@userCount)
                        </h6>
                    </div>
                    <div class="card-body p-0">
                        <div class="list-group list-group-flush" style="max-height: 300px; overflow-y: auto;">
                            @foreach (var user in users.Take(10))
                            {
                                <div class="list-group-item">
                                    <div class="d-flex align-items-center">
                                        <div class="me-2">
                                            @if (user.Role == "Doctor")
                                            {
                                                <i class="fas fa-user-md text-primary"></i>
                                            }
                                            else if (user.Role == "Nurse")
                                            {
                                                <i class="fas fa-user-nurse text-success"></i>
                                            }
                                            else
                                            {
                                                <i class="fas fa-user text-warning"></i>
                                            }
                                        </div>
                                        <div class="flex-grow-1">
                                            <div class="fw-bold small">@user.FirstName @user.LastName</div>
                                            <div class="text-muted small">@user.Role</div>
                                        </div>
                                    </div>
                                </div>
                            }
                            @if (users.Count > 10)
                            {
                                <div class="list-group-item text-center">
                                    <small class="text-muted">ve @(users.Count - 10) kişi daha...</small>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }

            <!-- Bilgi Notu -->
            <div class="card mt-3">
                <div class="card-header">
                    <h6 class="card-title mb-0">
                        <i class="fas fa-lightbulb me-2"></i>Önemli Bilgiler
                    </h6>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled small">
                        <li class="mb-2">
                            <i class="fas fa-check text-success me-2"></i>
                            Departman tamamen silinmez, sadece pasif duruma getirilir
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check text-success me-2"></i>
                            Mevcut veriler korunur, sadece yeni işlemler engellenir
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check text-success me-2"></i>
                            Gerektiğinde departmanı yeniden aktif hale getirebilirsiniz
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-exclamation-triangle text-warning me-2"></i>
                            Personellerin departman ataması kaldırılır
                        </li>
                        <li>
                            <i class="fas fa-exclamation-triangle text-warning me-2"></i>
                            Bu departmana yeni personel atanamaz
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Silme onayı için ek güvenlik
        document.querySelector('form').addEventListener('submit', function(e) {
            const confirmed = confirm('Son kez soruyorum: Bu departmanı gerçekten silmek istiyor musunuz?');
            if (!confirmed) {
                e.preventDefault();
            }
        });
    </script>
}
