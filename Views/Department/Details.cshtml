@model HospitalManagementSystem.Models.Department

@{
    ViewData["Title"] = "Departman Detayları";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var users = ViewBag.DepartmentUsers as List<HospitalManagementSystem.Models.User> ?? new List<HospitalManagementSystem.Models.User>();
}

<div class="container-fluid">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")" class="text-decoration-none">Ana Sayfa</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Department")" class="text-decoration-none">Departman Yönetimi</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
        </ol>
    </nav>

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-start mb-4">
        <div>
            <h2 class="h3 mb-1">
                <i class="fas fa-building me-2 text-primary"></i>@Model.Name
                <!-- IsActive kaldırıldı -->
            </h2>
            <p class="text-muted mb-0">
                <span class="badge bg-info me-2">@Model.Code</span>
                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    @Model.Description
                }
            </p>
        </div>
        <div class="btn-group">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                <i class="fas fa-edit me-1"></i>Düzenle
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-1"></i>Geri Dön
            </a>
        </div>
    </div>

    <div class="row">
        <!-- Departman Bilgileri -->
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-info-circle me-2"></i>Departman Bilgileri
                    </h5>
                </div>
                <div class="card-body">
                    <table class="table table-borderless">
                        <tr>
                            <td class="fw-bold" width="40%">Departman Adı:</td>
                            <td>@Model.Name</td>
                        </tr>
                        <tr>
                            <td class="fw-bold">Kod:</td>
                            <td><span class="badge bg-info">@Model.Code</span></td>
                        </tr>
                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            <tr>
                                <td class="fw-bold">Açıklama:</td>
                                <td>@Model.Description</td>
                            </tr>
                        }
                        @if (!string.IsNullOrEmpty(Model.HeadOfDepartment))
                        {
                            <tr>
                                <td class="fw-bold">Bölüm Başkanı:</td>
                                <td>
                                    <i class="fas fa-user-tie text-primary me-1"></i>@Model.HeadOfDepartment
                                </td>
                            </tr>
                        }
                        @if (!string.IsNullOrEmpty(Model.Location))
                        {
                            <tr>
                                <td class="fw-bold">Lokasyon:</td>
                                <td>
                                    <i class="fas fa-map-marker-alt text-danger me-1"></i>@Model.Location
                                </td>
                            </tr>
                        }
                        <!-- Durum satırı kaldırıldı -->
                        <tr>
                            <td class="fw-bold">Oluşturulma:</td>
                            <td>@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                        </tr>
                        @if (Model.UpdatedAt.HasValue)
                        {
                            <tr>
                                <td class="fw-bold">Son Güncelleme:</td>
                                <td>@Model.UpdatedAt.Value.ToString("dd.MM.yyyy HH:mm")</td>
                            </tr>
                        }
                    </table>
                </div>
            </div>

            <!-- İletişim Bilgileri -->
            @if (!string.IsNullOrEmpty(Model.Phone) || !string.IsNullOrEmpty(Model.Email))
            {
                <div class="card mt-3">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-address-book me-2"></i>İletişim Bilgileri
                        </h5>
                    </div>
                    <div class="card-body">
                        @if (!string.IsNullOrEmpty(Model.Phone))
                        {
                            <div class="mb-2">
                                <i class="fas fa-phone text-success me-2"></i>
                                <a href="tel:@Model.Phone" class="text-decoration-none">@Model.Phone</a>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.Email))
                        {
                            <div>
                                <i class="fas fa-envelope text-primary me-2"></i>
                                <a href="mailto:@Model.Email" class="text-decoration-none">@Model.Email</a>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>

        <!-- Personel Listesi -->
        <div class="col-lg-8">
            <!-- İstatistikler -->
            <div class="row mb-4">
                <div class="col-md-3">
                    <div class="card text-center border-primary">
                        <div class="card-body">
                            <i class="fas fa-user-md fa-2x text-primary mb-2"></i>
                            <h4 class="mb-0">@Model.DoctorCount</h4>
                            <small class="text-muted">Doktor</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-center border-success">
                        <div class="card-body">
                            <i class="fas fa-user-nurse fa-2x text-success mb-2"></i>
                            <h4 class="mb-0">@Model.NurseCount</h4>
                            <small class="text-muted">Hemşire</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-center border-warning">
                        <div class="card-body">
                            <i class="fas fa-users fa-2x text-warning mb-2"></i>
                            <h4 class="mb-0">@Model.StaffCount</h4>
                            <small class="text-muted">Personel</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-center border-info">
                        <div class="card-body">
                            <i class="fas fa-users fa-2x text-info mb-2"></i>
                            <h4 class="mb-0">@(Model.DoctorCount + Model.NurseCount + Model.StaffCount)</h4>
                            <small class="text-muted">Toplam</small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Personel Listesi -->
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-users me-2"></i>Departman Personeli
                        <span class="badge bg-secondary ms-2">@users.Count</span>
                    </h5>
                </div>
                <div class="card-body p-0">
                    @if (users.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Ad Soyad</th>
                                        <th>Rol</th>
                                        <th>E-posta</th>
                                        <th>Telefon</th>
                                            <!-- Durum sütunu kaldırıldı -->
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in users.OrderBy(u => u.Role).ThenBy(u => u.FirstName))
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar-sm me-2">
                                                        @if (user.Role == "Doctor")
                                                        {
                                                            <i class="fas fa-user-md text-primary"></i>
                                                        }
                                                        else if (user.Role == "Nurse")
                                                        {
                                                            <i class="fas fa-user-nurse text-success"></i>
                                                        }
                                                        else
                                                        {
                                                            <i class="fas fa-user text-warning"></i>
                                                        }
                                                    </div>
                                                    <div>
                                                        <strong>@user.FirstName @user.LastName</strong>
                                                        <br><small class="text-muted">@user.Username</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                @if (user.Role == "Doctor")
                                                {
                                                    <span class="badge bg-primary">Doktor</span>
                                                }
                                                else if (user.Role == "Nurse")
                                                {
                                                    <span class="badge bg-success">Hemşire</span>
                                                }
                                                else if (user.Role == "Admin")
                                                {
                                                    <span class="badge bg-danger">Admin</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning">@user.Role</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(user.Email))
                                                {
                                                    <a href="mailto:@user.Email" class="text-decoration-none">@user.Email</a>
                                                }
                                                else
                                                {
                                                    <small class="text-muted">-</small>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(user.PhoneNumber))
                                                {
                                                    <a href="tel:@user.PhoneNumber" class="text-decoration-none">@user.PhoneNumber</a>
                                                }
                                                else
                                                {
                                                    <small class="text-muted">-</small>
                                                }
                                            </td>
                                            <!-- Durum hücresi kaldırıldı -->
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-users fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Bu departmanda henüz personel bulunmuyor</h5>
                            <p class="text-muted">Kullanıcı yönetimi sayfasından personel atayabilirsiniz.</p>
                            <a href="@Url.Action("Index", "User")" class="btn btn-outline-primary">
                                <i class="fas fa-users me-1"></i>Kullanıcı Yönetimi
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
