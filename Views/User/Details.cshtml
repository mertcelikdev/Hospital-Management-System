@model User

@{
    ViewData["Title"] = "Kullanıcı Detayları";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="mb-1">
                        <i class="fas fa-user text-primary"></i>
                        Kullanıcı Detayları
                    </h2>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")">Dashboard</a></li>
                            <li class="breadcrumb-item"><a href="@Url.Action("Index", "User")">Kullanıcılar</a></li>
                            <li class="breadcrumb-item active">Detaylar</li>
                        </ol>
                    </nav>
                </div>
                <div>
                    <a href="@Url.Action("Edit", "User", new { id = Model.Id })" class="btn btn-primary me-2">
                        <i class="fas fa-edit"></i> Düzenle
                    </a>
                    <button class="btn btn-danger me-2" onclick="deleteUser('@Model.Id')">
                        <i class="fas fa-trash"></i> Sil
                    </button>
                    <a href="@Url.Action("Index", "User")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Geri Dön
                    </a>
                </div>
            </div>

            <div class="row">
                <!-- User Profile Card -->
                <div class="col-md-4">
                    <div class="card shadow-sm">
                        <div class="card-body text-center">
                            <div class="avatar-circle mx-auto mb-3">
                                @Model.Name.First()
                            </div>
                            <h4 class="card-title mb-1">@Model.Name</h4>
                            <span class="badge bg-@(Model.Role == "Doctor" ? "primary" : 
                                                    Model.Role == "Patient" ? "success" : 
                                                    Model.Role == "Nurse" ? "info" : 
                                                    Model.Role == "Staff" ? "warning" : "danger") mb-3">
                                @Model.Role
                            </span>
                            
                            @if (!string.IsNullOrEmpty(Model.DepartmentId))
                            {
                                <p class="text-muted mb-3">
                                    <i class="fas fa-building"></i> @Model.DepartmentId
                                </p>
                            }
                            
                            <div class="d-flex justify-content-center gap-2">
                                <!-- IsActive kaldırıldı -->
                                
                                <span class="badge bg-info">
                                    <i class="fas fa-calendar"></i> 
                                    @((DateTime.Now - Model.CreatedAt).Days) gün önce kayıt
                                </span>
                            </div>
                        </div>
                    </div>

                    <!-- Quick Actions -->
                    <div class="card shadow-sm mt-4">
                        <div class="card-header">
                            <h6 class="mb-0">
                                <i class="fas fa-bolt"></i> Hızlı İşlemler
                            </h6>
                        </div>
                        <div class="card-body p-2">
                            <div class="d-grid gap-2">
                                @if (Model.Role == "Doctor")
                                {
                                    <a href="#" class="btn btn-outline-primary btn-sm">
                                        <i class="fas fa-calendar-plus"></i> Randevu Oluştur
                                    </a>
                                    <a href="#" class="btn btn-outline-info btn-sm">
                                        <i class="fas fa-calendar-check"></i> Randevuları Görüntüle
                                    </a>
                                }
                                else if (Model.Role == "Patient")
                                {
                                    <a href="#" class="btn btn-outline-success btn-sm">
                                                <i class="fas fa-calendar-plus"></i> Randevu Oluştur
                                    </a>
                                    <a href="#" class="btn btn-outline-info btn-sm">
                                        <i class="fas fa-history"></i> Randevu Geçmişi
                                    </a>
                                }
                                
                                <a href="mailto:@Model.Email" class="btn btn-outline-secondary btn-sm">
                                    <i class="fas fa-envelope"></i> E-posta Gönder
                                </a>
                                
                                @if (!string.IsNullOrEmpty(Model.Phone))
                                {
                                    <a href="tel:@Model.Phone" class="btn btn-outline-secondary btn-sm">
                                        <i class="fas fa-phone"></i> Ara
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <!-- User Information -->
                <div class="col-md-8">
                    <div class="card shadow-sm">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="fas fa-info-circle"></i> Kişisel Bilgiler
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="info-item mb-3">
                                        <label class="text-muted small">E-posta</label>
                                        <div class="fw-semibold">
                                            <i class="fas fa-envelope text-primary me-2"></i>
                                            @Model.Email
                                        </div>
                                    </div>

                                    @if (!string.IsNullOrEmpty(Model.Phone))
                                    {
                                        <div class="info-item mb-3">
                                            <label class="text-muted small">Telefon</label>
                                            <div class="fw-semibold">
                                                <i class="fas fa-phone text-success me-2"></i>
                                                @Model.Phone
                                            </div>
                                        </div>
                                    }

                                    @if (Model.DateOfBirth.HasValue)
                                    {
                                        <div class="info-item mb-3">
                                            <label class="text-muted small">Doğum Tarihi</label>
                                            <div class="fw-semibold">
                                                <i class="fas fa-birthday-cake text-warning me-2"></i>
                                                @Model.DateOfBirth.Value.ToString("dd.MM.yyyy")
                                                <small class="text-muted">(@((DateTime.Now - Model.DateOfBirth.Value).Days / 365) yaşında)</small>
                                            </div>
                                        </div>
                                    }

                                    <div class="info-item mb-3">
                                        <label class="text-muted small">Cinsiyet</label>
                                        <div class="fw-semibold">
                                            <i class="fas fa-@(Model.Gender == Gender.Male ? "mars" : "venus") text-info me-2"></i>
                                            @(Model.Gender == Gender.Male ? "Erkek" : Model.Gender == Gender.Female ? "Kadın" : "Belirtilmemiş")
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    @if (!string.IsNullOrEmpty(Model.Address))
                                    {
                                        <div class="info-item mb-3">
                                            <label class="text-muted small">Adres</label>
                                            <div class="fw-semibold">
                                                <i class="fas fa-map-marker-alt text-danger me-2"></i>
                                                @Model.Address
                                            </div>
                                        </div>
                                    }

                                    @if (!string.IsNullOrEmpty(Model.EmergencyContact))
                                    {
                                        <div class="info-item mb-3">
                                            <label class="text-muted small">Acil Durum İletişimi</label>
                                            <div class="fw-semibold">
                                                <i class="fas fa-phone-alt text-danger me-2"></i>
                                                @Model.EmergencyContact
                                            </div>
                                        </div>
                                    }

                                    <div class="info-item mb-3">
                                        <label class="text-muted small">Kayıt Tarihi</label>
                                        <div class="fw-semibold">
                                            <i class="fas fa-calendar-plus text-primary me-2"></i>
                                            @Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")
                                        </div>
                                    </div>

                                    <div class="info-item mb-3">
                                        <label class="text-muted small">Son Güncelleme</label>
                                        <div class="fw-semibold">
                                            <i class="fas fa-calendar-edit text-warning me-2"></i>
                                            @Model.UpdatedAt.ToString("dd.MM.yyyy HH:mm")
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Activity Timeline -->
                    <div class="card shadow-sm mt-4">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="fas fa-history"></i> Son Aktiviteler
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="timeline">
                                <div class="timeline-item">
                                    <div class="timeline-marker bg-success"></div>
                                    <div class="timeline-content">
                                        <h6 class="mb-1">Kullanıcı Hesabı Oluşturuldu</h6>
                                        <p class="text-muted mb-1">Sistem tarafından otomatik olarak oluşturuldu</p>
                                        <small class="text-muted">@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</small>
                                    </div>
                                </div>

                                @if (Model.UpdatedAt > Model.CreatedAt)
                                {
                                    <div class="timeline-item">
                                        <div class="timeline-marker bg-warning"></div>
                                        <div class="timeline-content">
                                            <h6 class="mb-1">Profil Güncellendi</h6>
                                            <p class="text-muted mb-1">Kullanıcı bilgileri güncellendi</p>
                                            <small class="text-muted">@Model.UpdatedAt.ToString("dd.MM.yyyy HH:mm")</small>
                                        </div>
                                    </div>
                                }

                                <div class="timeline-item">
                                    <div class="timeline-marker bg-info"></div>
                                    <div class="timeline-content">
                                        <h6 class="mb-1">Profil Görüntülendi</h6>
                                        <p class="text-muted mb-1">Bu sayfa görüntülendi</p>
                                        <small class="text-muted">@DateTime.Now.ToString("dd.MM.yyyy HH:mm")</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function deleteUser(id) {
            if (confirm('Bu kullanıcıyı silmek istediğinize emin misiniz?')) {
                fetch(`/User/Delete/${id}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                })
                .then(response => {
                    if (response.ok) {
                        window.location.href = '/User';
                    } else {
                        alert('Kullanıcı silinirken bir hata oluştu.');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Bir hata oluştu.');
                });
            }
        }
    </script>
    
    <style>
        .avatar-circle {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 3rem;
            font-weight: bold;
        }

        .info-item label {
            font-size: 0.875rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .timeline {
            position: relative;
            padding-left: 30px;
        }

        .timeline::before {
            content: '';
            position: absolute;
            left: 15px;
            top: 0;
            bottom: 0;
            width: 2px;
            background: #e9ecef;
        }

        .timeline-item {
            position: relative;
            margin-bottom: 1.5rem;
        }

        .timeline-marker {
            position: absolute;
            left: -23px;
            top: 0;
            width: 16px;
            height: 16px;
            border-radius: 50%;
            border: 3px solid white;
            box-shadow: 0 0 0 2px #e9ecef;
        }

        .timeline-content {
            background: #f8f9fa;
            padding: 1rem;
            border-radius: 8px;
            border-left: 4px solid #dee2e6;
        }

        .card:hover {
            transform: translateY(-2px);
            transition: all 0.3s ease;
        }
    </style>
}
