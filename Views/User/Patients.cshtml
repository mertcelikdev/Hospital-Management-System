@model List<User>
@{
    ViewData["Title"] = "Hastalar";
    var currentUserRole = ViewBag.CurrentUserRole as string;
}

<div class="container-fluid py-4">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-md-8">
            <h2 class="h3 mb-0">
                <i class="fas fa-user-injured text-primary me-2"></i>
                Hastalar
                @if (currentUserRole == "Doctor")
                {
                    <small class="text-muted">(Benim Hastalarım)</small>
                }
                else if (currentUserRole == "Nurse")
                {
                    <small class="text-muted">(Bakım Verdiğim Hastalar)</small>
                }
            </h2>
            <p class="text-muted">Sistemimizdeki hastaları görüntüleyin ve yönetin</p>
        </div>
        <div class="col-md-4 text-md-end">
            @if (currentUserRole == "Admin" || currentUserRole == "Staff")
            {
                <a asp-action="Create" asp-route-role="Patient" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>Yeni Hasta Ekle
                </a>
            }
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title mb-0">Toplam Hasta</h6>
                            <h2 class="mb-0">@Model.Count</h2>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-users fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title mb-0">Aktif Hasta</h6>
                            <h2 class="mb-0">@Model.Count(u => u.IsActive)</h2>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-heartbeat fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm bg-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title mb-0">Bu Ay Kayıt</h6>
                            <h2 class="mb-0">@Model.Count(u => u.CreatedAt >= DateTime.Now.AddMonths(-1))</h2>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-calendar-plus fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm bg-warning text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title mb-0">Atanan Doktor</h6>
                            <h2 class="mb-0">@Model.Count(u => !string.IsNullOrEmpty(u.AssignedDoctorId))</h2>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-user-md fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <input type="text" id="searchInput" class="form-control" placeholder="Hasta ara..." onkeyup="filterPatients()">
                </div>
                <div class="col-md-2">
                    <select id="genderFilter" class="form-select" onchange="filterPatients()">
                        <option value="">Tüm Cinsiyetler</option>
                        <option value="Male">Erkek</option>
                        <option value="Female">Kadın</option>
                        <option value="Other">Diğer</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <select id="statusFilter" class="form-select" onchange="filterPatients()">
                        <option value="">Tüm Durumlar</option>
                        <option value="true">Aktif</option>
                        <option value="false">Pasif</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <select id="doctorFilter" class="form-select" onchange="filterPatients()">
                        <option value="">Tüm Doktorlar</option>
                        <option value="assigned">Atanmış</option>
                        <option value="unassigned">Atanmamış</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button class="btn btn-outline-secondary w-100" onclick="clearFilters()">
                        <i class="fas fa-times me-1"></i>Temizle
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Patients Table -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white">
            <h5 class="mb-0">
                <i class="fas fa-list me-2"></i>
                Hasta Listesi
            </h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0" id="patientsTable">
                    <thead>
                        <tr>
                            <th>Hasta Bilgileri</th>
                            <th>İletişim</th>
                            <th>Doktor</th>
                            <th>Hemşire</th>
                            <th>Durum</th>
                            <th>Kayıt Tarihi</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var patient in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-circle me-3">
                                                @patient.Name.Substring(0, 1).ToUpper()
                                            </div>
                                            <div>
                                                <h6 class="mb-0">@patient.Name</h6>
                                                <small class="text-muted">
                                                    @if (patient.Gender.HasValue)
                                                    {
                                                        @(patient.Gender == Gender.Male ? "Erkek" : patient.Gender == Gender.Female ? "Kadın" : "Diğer")
                                                    }
                                                    @if (patient.DateOfBirth.HasValue)
                                                    {
                                                        <span> • @((DateTime.Now - patient.DateOfBirth.Value).Days / 365) yaş</span>
                                                    }
                                                </small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div>
                                            <small class="d-block">@patient.Email</small>
                                            <small class="text-muted">@patient.Phone</small>
                                        </div>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(patient.AssignedDoctorId))
                                        {
                                            <span class="badge bg-primary">
                                                <i class="fas fa-user-md me-1"></i>Atanmış
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">
                                                <i class="fas fa-exclamation me-1"></i>Atanmamış
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(patient.AssignedNurseId))
                                        {
                                            <span class="badge bg-info">
                                                <i class="fas fa-user-nurse me-1"></i>Atanmış
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="fas fa-minus me-1"></i>Atanmamış
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        @if (patient.IsActive)
                                        {
                                            <span class="badge bg-success">Aktif</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Pasif</span>
                                        }
                                    </td>
                                    <td>
                                        <small>@patient.CreatedAt.ToString("dd.MM.yyyy")</small>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-action="Details" asp-route-id="@patient.Id" 
                                               class="btn btn-outline-info" title="Detaylar">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            @if (currentUserRole == "Admin" || currentUserRole == "Staff" || currentUserRole == "Doctor")
                                            {
                                                <a asp-action="Edit" asp-route-id="@patient.Id" 
                                                   class="btn btn-outline-warning" title="Düzenle">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                            }
                                            @if (currentUserRole == "Admin")
                                            {
                                                <button class="btn btn-outline-danger" 
                                                        onclick="deletePatient('@patient.Id', '@patient.Name')" title="Sil">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center py-4">
                                    <i class="fas fa-user-injured fa-3x text-muted mb-3"></i>
                                    <p class="text-muted">Henüz hasta kaydı bulunmamaktadır.</p>
                                    @if (currentUserRole == "Admin" || currentUserRole == "Staff")
                                    {
                                        <a asp-action="Create" asp-route-role="Patient" class="btn btn-primary">
                                            <i class="fas fa-plus me-2"></i>İlk Hastayı Ekle
                                        </a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function filterPatients() {
            const searchTerm = document.getElementById('searchInput').value.toLowerCase();
            const genderFilter = document.getElementById('genderFilter').value;
            const statusFilter = document.getElementById('statusFilter').value;
            const doctorFilter = document.getElementById('doctorFilter').value;
            const table = document.getElementById('patientsTable');
            const rows = table.getElementsByTagName('tbody')[0].getElementsByTagName('tr');

            for (let i = 0; i < rows.length; i++) {
                if (rows[i].cells.length < 7) continue; // Skip empty state row

                const row = rows[i];
                const name = row.cells[0].textContent.toLowerCase();
                const email = row.cells[1].textContent.toLowerCase();
                const doctorStatus = row.cells[2].textContent;
                const status = row.cells[4].textContent;

                const matchesSearch = name.includes(searchTerm) || email.includes(searchTerm);
                const matchesGender = !genderFilter || name.includes(genderFilter.toLowerCase());
                const matchesStatus = !statusFilter || 
                                    (statusFilter === 'true' && status.includes('Aktif')) ||
                                    (statusFilter === 'false' && status.includes('Pasif'));
                const matchesDoctor = !doctorFilter ||
                                    (doctorFilter === 'assigned' && doctorStatus.includes('Atanmış')) ||
                                    (doctorFilter === 'unassigned' && doctorStatus.includes('Atanmamış'));

                if (matchesSearch && matchesGender && matchesStatus && matchesDoctor) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            }
        }

        function clearFilters() {
            document.getElementById('searchInput').value = '';
            document.getElementById('genderFilter').value = '';
            document.getElementById('statusFilter').value = '';
            document.getElementById('doctorFilter').value = '';
            filterPatients();
        }

        function deletePatient(patientId, patientName) {
            if (confirm(`"${patientName}" hastasını silmek istediğinizden emin misiniz?`)) {
                fetch(`/User/Delete/${patientId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-Requested-With': 'XMLHttpRequest'
                    }
                }).then(response => {
                    if (response.ok) {
                        location.reload();
                    } else {
                        alert('Hasta silinirken bir hata oluştu.');
                    }
                });
            }
        }
    </script>

    <style>
        .avatar-circle {
            width: 45px;
            height: 45px;
            border-radius: 50%;
            background: linear-gradient(135deg, #28a745, #20c997);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            font-size: 1.2rem;
        }
    </style>
}
