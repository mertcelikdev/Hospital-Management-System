@model User
@{
    ViewData["Title"] = "Yeni Kullanıcı";
}

<div class="container py-4">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-md-8">
            <h2 class="h3 mb-0">
                <i class="fas fa-user-plus text-primary me-2"></i>
                Yeni Kullanıcı Oluştur
            </h2>
            <p class="text-muted">Sisteme yeni bir kullanıcı ekleyin</p>
        </div>
        <div class="col-md-4 text-md-end">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Geri Dön
            </a>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-gradient-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-user me-2"></i>
                        Kullanıcı Bilgileri
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" method="post" id="userForm">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <!-- Personal Information -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <h6 class="text-primary mb-3">
                                    <i class="fas fa-id-card me-2"></i>Kişisel Bilgiler
                                </h6>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Name" class="form-label">İsim Soyisim</label>
                                    <input asp-for="Name" class="form-control" placeholder="Adınızı ve soyadınızı giriniz">
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Gender" class="form-label">Cinsiyet</label>
                                    <select asp-for="Gender" class="form-select">
                                        <option value="">Seçiniz</option>
                                        <option value="@Gender.Male">Erkek</option>
                                        <option value="@Gender.Female">Kadın</option>
                                        <option value="@Gender.Other">Diğer</option>
                                    </select>
                                    <span asp-validation-for="Gender" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="DateOfBirth" class="form-label">Doğum Tarihi</label>
                                    <input asp-for="DateOfBirth" type="date" class="form-control">
                                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                                </div>
                            </div>
                            <!-- Rol seçimi kaldırıldı: backend otomatik atayacak -->
                        </div>

                        <!-- Contact Information -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <h6 class="text-primary mb-3">
                                    <i class="fas fa-address-book me-2"></i>İletişim Bilgileri
                                </h6>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Email" class="form-label">E-posta</label>
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="fas fa-envelope"></i>
                                        </span>
                                        <input asp-for="Email" type="email" class="form-control" placeholder="ornek@email.com">
                                    </div>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Phone" class="form-label">Telefon</label>
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="fas fa-phone"></i>
                                        </span>
                                        <input asp-for="Phone" type="tel" class="form-control" placeholder="(555) 123-4567">
                                    </div>
                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="mb-3">
                                    <label asp-for="Address" class="form-label">Adres</label>
                                    <textarea asp-for="Address" class="form-control" rows="3" placeholder="Tam adresinizi giriniz"></textarea>
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Department Selection (for staff) -->
                        <div class="row mb-4" id="departmentSection" style="display: none;">
                            <div class="col-12">
                                <h6 class="text-primary mb-3">
                                    <i class="fas fa-building me-2"></i>Departman Bilgisi
                                </h6>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="DepartmentId" class="form-label">Departman</label>
                                    <select asp-for="DepartmentId" class="form-select">
                                        <option value="">Departman seçiniz</option>
                                        <option value="1">Dahiliye</option>
                                        <option value="2">Kardiyoloji</option>
                                        <option value="3">Nöroloji</option>
                                        <option value="4">Ortopedi</option>
                                        <option value="5">Pediatri</option>
                                        <option value="6">Acil Servis</option>
                                    </select>
                                    <span asp-validation-for="DepartmentId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- IsActive ve Status bölümü kaldırıldı -->

                        <!-- Action Buttons -->
                        <div class="row">
                            <div class="col-12">
                                <div class="d-flex gap-3 justify-content-end">
                                    <a asp-action="Index" class="btn btn-outline-secondary">
                                        <i class="fas fa-times me-2"></i>İptal
                                    </a>
                                    <button type="submit" class="btn btn-primary" id="saveButton">
                                        <i class="fas fa-save me-2"></i>Kaydet
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/user-create.js"></script>

    <style>
        .form-control:focus, .form-select:focus {
            border-color: #007bff;
            box-shadow: 0 0 0 0.2rem rgba(0,123,255,0.15);
        }
        
        .input-group-text {
            background-color: #f8f9fa;
            border-color: #ced4da;
        }
        
        .card-header.bg-gradient-primary {
            background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
        }
        
        .form-check-input:checked {
            background-color: #007bff;
            border-color: #007bff;
        }
        
        .form-section {
            border-left: 4px solid transparent;
            padding-left: 1rem;
            transition: all 0.3s ease;
        }
        
        .password-strength {
            font-size: 0.875em;
            margin-top: 0.25rem;
        }
        .password-strength.weak { color: #dc3545; }
        .password-strength.medium { color: #fd7e14; }
        .password-strength.strong { color: #198754; }
        
        .avatar-circle {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 2rem;
            font-weight: bold;
            margin: 0 auto 1rem;
        }
    </style>
}
