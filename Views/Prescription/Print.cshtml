@model HospitalManagementSystem.DTOs.PrescriptionDto
@{
    ViewData["Title"] = "Reçete Yazdır";
    Layout = null; // Yazdırma için layout kullanmıyoruz
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Reçete - @Model.Id</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        @@media print {
            .no-print { display: none !important; }
            body { font-size: 12px; }
            .card { border: 1px solid #000 !important; }
            .prescription-header { background-color: #f8f9fa !important; }
        }
        
        body {
            font-family: Arial, sans-serif;
            background: white;
        }
        
        .prescription-container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }
        
        .prescription-header {
            background: #f8f9fa;
            border: 2px solid #007bff;
            padding: 20px;
            margin-bottom: 20px;
            text-align: center;
        }
        
        .hospital-logo {
            width: 60px;
            height: 60px;
            background: #007bff;
            border-radius: 50%;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 24px;
            margin-bottom: 10px;
        }
        
        .prescription-content {
            border: 1px solid #dee2e6;
            padding: 20px;
        }
        
        .medication-list {
            border: 1px solid #dee2e6;
            margin-top: 20px;
        }
        
        .medication-item {
            border-bottom: 1px solid #dee2e6;
            padding: 10px;
        }
        
        .medication-item:last-child {
            border-bottom: none;
        }
        
        .signature-area {
            margin-top: 40px;
            text-align: right;
        }
        
        .doctor-signature {
            border-top: 1px solid #000;
            width: 200px;
            margin-left: auto;
            padding-top: 5px;
            text-align: center;
        }
        
        .prescription-footer {
            margin-top: 30px;
            font-size: 11px;
            color: #6c757d;
            text-align: center;
        }
        
        .barcode {
            font-family: 'Courier New', monospace;
            font-size: 10px;
            letter-spacing: 2px;
            text-align: center;
            margin: 10px 0;
        }
    </style>
</head>
<body>
    <div class="prescription-container">
        <!-- Print Button -->
        <div class="no-print text-center mb-3">
            <button onclick="window.print()" class="btn btn-primary me-2">
                <i class="mdi mdi-printer"></i> Yazdır
            </button>
            <button onclick="window.close()" class="btn btn-secondary">
                Kapat
            </button>
        </div>

        <!-- Prescription Header -->
        <div class="prescription-header">
            <div class="hospital-logo">
                <span>+</span>
            </div>
            <h3 class="mb-1">HASTANE YÖNETİM SİSTEMİ</h3>
            <p class="mb-0">Dijital Hastane Çözümleri</p>
            <div class="barcode">
                ||||| @Model.Id.ToUpper() |||||
            </div>
        </div>

        <!-- Prescription Content -->
        <div class="prescription-content">
            <!-- Patient and Doctor Info -->
            <div class="row mb-4">
                <div class="col-6">
                    <h5 class="border-bottom pb-2">HASTA BİLGİLERİ</h5>
                    <table class="table table-borderless table-sm">
                        <tr>
                            <td style="width: 30%;"><strong>Ad Soyad:</strong></td>
                            <td>@Model.PatientName</td>
                        </tr>
                        <tr>
                            <td><strong>TC Kimlik:</strong></td>
                            <td><!-- TcNo DTO'da yok --></td>
                        </tr>
                        <tr>
                            <td><strong>Telefon:</strong></td>
                            <td><!-- Phone DTO'da yok -->Belirtilmemiş</td>
                        </tr>
                        <!-- Doğum tarihi DTO'da yok -->
                    </table>
                </div>
                <div class="col-6">
                    <h5 class="border-bottom pb-2">REÇETE BİLGİLERİ</h5>
                    <table class="table table-borderless table-sm">
                        <tr>
                            <td style="width: 30%;"><strong>Reçete No:</strong></td>
                            <td>@Model.Id.Substring(0, 8).ToUpper()</td>
                        </tr>
                        <tr>
                            <td><strong>Tarih:</strong></td>
                            <td>@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                        </tr>
                        <tr>
                            <td><strong>Doktor:</strong></td>
                            <td>@Model.DoctorName</td>
                        </tr>
                        @if (Model.ValidUntil.HasValue)
                        {
                            <tr>
                                <td><strong>Geçerlilik:</strong></td>
                                <td>@Model.ValidUntil.Value.ToString("dd.MM.yyyy")</td>
                            </tr>
                        }
                    </table>
                </div>
            </div>

            <!-- Diagnosis -->
            @if (!string.IsNullOrEmpty(Model.Diagnosis))
            {
                <div class="mb-4">
                    <h5 class="border-bottom pb-2">TANI</h5>
                    <p class="mb-0">@Model.Diagnosis</p>
                </div>
            }

            <!-- Medications -->
            <div class="mb-4">
                <h5 class="border-bottom pb-2">REÇETELENDİRİLEN İLAÇLAR</h5>
                
                @if (Model.Medications.Any())
                {
                    <div class="medication-list">
                        @for (int i = 0; i < Model.Medications.Count; i++)
                        {
                            var medication = Model.Medications[i];
                            <div class="medication-item">
                                <div class="row">
                                    <div class="col-1">
                                        <strong>@(i + 1).</strong>
                                    </div>
                                    <div class="col-11">
                                        <div class="row">
                                            <div class="col-md-8">
                                                <h6 class="mb-1">@medication.MedicationName</h6>
                                            </div>
                                            <div class="col-md-4 text-end">
                                                <span class="badge bg-primary">@medication.Quantity adet</span>
                                            </div>
                                        </div>
                                        
                                        <div class="mt-2">
                                            <div class="row">
                                                <div class="col-md-3">
                                                    <small><strong>Doz:</strong> @medication.Dosage</small>
                                                </div>
                                                <div class="col-md-3">
                                                    <small><strong>Sıklık:</strong> @medication.Frequency</small>
                                                </div>
                                                <div class="col-md-3">
                                                    <small><strong>Süre:</strong> @medication.Duration</small>
                                                </div>
                                                <div class="col-md-3">
                                                    <small><strong>Miktar:</strong> @medication.Quantity</small>
                                                </div>
                                            </div>
                                        </div>
                                        
                                        @if (!string.IsNullOrEmpty(medication.Instructions))
                                        {
                                            <div class="mt-1">
                                                <small><strong>Kullanım:</strong> @medication.Instructions</small>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted">Bu reçetede ilaç bulunmuyor.</p>
                }
            </div>

            <!-- Notes -->
            @if (!string.IsNullOrEmpty(Model.Notes))
            {
                <div class="mb-4">
                    <h5 class="border-bottom pb-2">NOTLAR</h5>
                    <p class="mb-0">@Model.Notes</p>
                </div>
            }

            <!-- Signature Area -->
            <div class="signature-area">
                <p class="mb-1">Doktor İmzası</p>
                <div class="doctor-signature">
                    <strong>@Model.DoctorName</strong>
                </div>
            </div>
        </div>

        <!-- Footer -->
        <div class="prescription-footer">
            <p class="mb-1"><strong>DİKKAT:</strong> Bu reçete elektronik ortamda oluşturulmuş olup, dijital imza ile güvence altına alınmıştır.</p>
            <p class="mb-1">İlaçları doktor tavsiyesi dışında kullanmayınız. Yan etki gözlenmesi durumunda doktorunuza başvurunuz.</p>
            <p class="mb-0">Bu reçete @(Model.ValidUntil?.ToString("dd.MM.yyyy") ?? "süresiz") tarihine kadar geçerlidir.</p>
            
            <div class="mt-3">
                <small>
                    Yazdırma Tarihi: @DateTime.Now.ToString("dd.MM.yyyy HH:mm") | 
                    Sistem: Hastane Yönetim Sistemi v1.0
                </small>
            </div>
        </div>
    </div>

    <script>
        // Sayfa yüklendiğinde otomatik yazdırma seçeneği
        window.addEventListener('load', function() {
            // URL'de auto-print parametresi varsa otomatik yazdır
            const urlParams = new URLSearchParams(window.location.search);
            if (urlParams.get('auto-print') === 'true') {
                setTimeout(() => {
                    window.print();
                }, 500);
            }
        });

        // Yazdırma tamamlandıktan sonra pencereyi kapat
        window.addEventListener('afterprint', function() {
            const urlParams = new URLSearchParams(window.location.search);
            if (urlParams.get('auto-close') === 'true') {
                window.close();
            }
        });
    </script>
</body>
</html>
