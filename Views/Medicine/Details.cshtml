@model Medicine

@{
    ViewData["Title"] = "İlaç Detayları";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="mb-1">
                        <i class="fas fa-pills text-primary"></i>
                        İlaç Detayları
                    </h2>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")">Dashboard</a></li>
                            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Medicine")">İlaçlar</a></li>
                            <li class="breadcrumb-item active">Detaylar</li>
                        </ol>
                    </nav>
                </div>
                <div>
                    <a href="@Url.Action("Edit", "Medicine", new { id = Model.Id })" class="btn btn-primary me-2">
                        <i class="fas fa-edit"></i> Düzenle
                    </a>
                    <button class="btn btn-danger me-2" onclick="deleteMedicine('@Model.Id')">
                        <i class="fas fa-trash"></i> Sil
                    </button>
                    <a href="@Url.Action("Index", "Medicine")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Geri Dön
                    </a>
                </div>
            </div>

            <div class="row">
                <!-- Medicine Info Card -->
                <div class="col-md-4">
                    <div class="card shadow-sm">
                        <div class="card-body text-center">
                            <div class="medicine-icon mx-auto mb-3">
                                <i class="fas fa-pills"></i>
                            </div>
                            <h4 class="card-title mb-1">@Model.Name</h4>
                            <h6 class="text-muted mb-3">@Model.GenericName</h6>
                            
                            <div class="d-flex justify-content-center gap-2 mb-3">
                                <span class="badge bg-info">
                                    <i class="fas fa-tablets"></i> @Model.Form
                                </span>
                                
                                <span class="badge bg-primary">
                                    <i class="fas fa-weight"></i> @Model.Strength
                                </span>
                            </div>

                            <div class="row text-center">
                                <div class="col-6">
                                    <div class="border-end">
                                        <h5 class="mb-0 text-success">@Model.StockQuantity</h5>
                                        <small class="text-muted">Stok</small>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <h5 class="mb-0 text-warning">₺@Model.Price.ToString("F2")</h5>
                                    <small class="text-muted">Fiyat</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Stock Alert -->
                    @if (Model.StockQuantity < 10)
                    {
                        <div class="alert alert-warning mt-3">
                            <i class="fas fa-exclamation-triangle"></i>
                            <strong>Düşük Stok Uyarısı!</strong><br>
                            Bu ilacın stoğu kritik seviyede.
                        </div>
                    }
                    else if (Model.StockQuantity < 50)
                    {
                        <div class="alert alert-info mt-3">
                            <i class="fas fa-info-circle"></i>
                            <strong>Stok Bilgisi</strong><br>
                            Stok seviyesi normale yakın.
                        </div>
                    }


                <!-- Medicine Details -->
                <div class="col-md-8">
                    <div class="card shadow-sm">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="fas fa-info-circle"></i> İlaç Bilgileri
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="info-item mb-3">
                                        <label class="text-muted small">İlaç Adı</label>
                                        <div class="fw-semibold">
                                            <i class="fas fa-pills text-primary me-2"></i>
                                            @Model.Name
                                        </div>
                                    </div>

                                    <div class="info-item mb-3">
                                        <label class="text-muted small">Jenerik Adı</label>
                                        <div class="fw-semibold">
                                            <i class="fas fa-dna text-info me-2"></i>
                                            @Model.GenericName
                                        </div>
                                    </div>

                                    <div class="info-item mb-3">
                                        <label class="text-muted small">Üretici</label>
                                        <div class="fw-semibold">
                                            <i class="fas fa-industry text-success me-2"></i>
                                            @Model.Manufacturer
                                        </div>
                                    </div>

                                    <div class="info-item mb-3">
                                        <label class="text-muted small">Form</label>
                                        <div class="fw-semibold">
                                            <i class="fas fa-tablets text-warning me-2"></i>
                                            @Model.Form
                                        </div>
                                    </div>

                                    <div class="info-item mb-3">
                                        <label class="text-muted small">Güç/Doz</label>
                                        <div class="fw-semibold">
                                            <i class="fas fa-weight text-info me-2"></i>
                                            @Model.Strength
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="info-item mb-3">
                                        <label class="text-muted small">Fiyat</label>
                                        <div class="fw-semibold">
                                            <i class="fas fa-lira-sign text-success me-2"></i>
                                            ₺@Model.Price.ToString("F2")
                                        </div>
                                    </div>

                                    <div class="info-item mb-3">
                                        <label class="text-muted small">Stok Miktarı</label>
                                        <div class="fw-semibold">
                                            <i class="fas fa-boxes text-primary me-2"></i>
                                            @Model.StockQuantity adet
                                        </div>
                                    </div>

                                    @if (Model.ExpiryDate.HasValue)
                                    {
                                        <div class="info-item mb-3">
                                            <label class="text-muted small">Son Kullanma Tarihi</label>
                                            <div class="fw-semibold">
                                                <i class="fas fa-calendar-times text-danger me-2"></i>
                                                @Model.ExpiryDate.Value.ToString("dd.MM.yyyy")
                                                @{
                                                    var daysLeft = (Model.ExpiryDate.Value - DateTime.Now).Days;
                                                }
                                                @if (daysLeft < 30)
                                                {
                                                    <span class="badge bg-danger ms-2">@daysLeft gün kaldı</span>
                                                }
                                                else if (daysLeft < 90)
                                                {
                                                    <span class="badge bg-warning ms-2">@daysLeft gün kaldı</span>
                                                }
                                            </div>
                                        </div>
                                    }

                                    <div class="info-item mb-3">
                                        <label class="text-muted small">Oluşturulma Tarihi</label>
                                        <div class="fw-semibold">
                                            <i class="fas fa-calendar-plus text-primary me-2"></i>
                                            @Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")
                                        </div>
                                    </div>

                                    @if (Model.UpdatedAt.HasValue)
                                    {
                                        <div class="info-item mb-3">
                                            <label class="text-muted small">Son Güncelleme</label>
                                            <div class="fw-semibold">
                                                <i class="fas fa-calendar-edit text-warning me-2"></i>
                                                @Model.UpdatedAt.Value.ToString("dd.MM.yyyy HH:mm")
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>

                            @if (!string.IsNullOrEmpty(Model.Description))
                            {
                                <hr>
                                <div class="info-item">
                                    <label class="text-muted small">Açıklama</label>
                                    <div class="fw-semibold">
                                        <i class="fas fa-file-alt text-info me-2"></i>
                                        @Model.Description
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Usage Instructions -->
                    @if (!string.IsNullOrEmpty(Model.Instructions))
                    {
                        <div class="card shadow-sm mt-4">
                            <div class="card-header">
                                <h5 class="mb-0">
                                    <i class="fas fa-prescription"></i> Kullanım Talimatları
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="alert alert-light border-start border-4 border-info">
                                    <i class="fas fa-info-circle text-info me-2"></i>
                                    @Model.Instructions
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Statistics -->
                    <div class="card shadow-sm mt-4">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="fas fa-chart-bar"></i> İstatistikler
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row text-center">
                                <div class="col-md-3">
                                    <div class="stat-item">
                                        <i class="fas fa-eye text-primary mb-2"></i>
                                        <h6 class="mb-1">Görüntüleme</h6>
                                        <small class="text-muted">Bu sayfa</small>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="stat-item">
                                        <i class="fas fa-calendar text-success mb-2"></i>
                                        <h6 class="mb-1">@((DateTime.Now - Model.CreatedAt).Days) Gün</h6>
                                        <small class="text-muted">Sistemde</small>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="stat-item">
                                        <i class="fas fa-money-bill text-warning mb-2"></i>
                                        <h6 class="mb-1">₺@((Model.StockQuantity * Model.Price).ToString("F2"))</h6>
                                        <small class="text-muted">Toplam Değer</small>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="stat-item">
                                        <i class="fas fa-star text-info mb-2"></i>
                                        <h6 class="mb-1">Aktif</h6>
                                        <small class="text-muted">Durum</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function deleteMedicine(id) {
            if (confirm('Bu ilacı silmek istediğinize emin misiniz?')) {
                fetch(`/Medicine/Delete/${id}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                })
                .then(response => {
                    if (response.ok) {
                        window.location.href = '/Medicine';
                    } else {
                        alert('İlaç silinirken bir hata oluştu.');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Bir hata oluştu.');
                });
            }
        }

        function addStock(id) {
            const quantity = prompt('Eklenecek stok miktarını girin:');
            if (quantity && !isNaN(quantity) && parseInt(quantity) > 0) {
                updateStock(id, parseInt(quantity), 'add');
            }
        }

        function reduceStock(id) {
            const quantity = prompt('Azaltılacak stok miktarını girin:');
            if (quantity && !isNaN(quantity) && parseInt(quantity) > 0) {
                updateStock(id, parseInt(quantity), 'reduce');
            }
        }

        function updateStock(id, quantity, operation) {
            fetch(`/Medicine/UpdateStock/${id}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ quantity: quantity, operation: operation })
            })
            .then(response => {
                if (response.ok) {
                    location.reload();
                } else {
                    alert('Stok güncellenirken bir hata oluştu.');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Bir hata oluştu.');
            });
        }

        function updatePrice(id) {
            const price = prompt('Yeni fiyatı girin:');
            if (price && !isNaN(price) && parseFloat(price) > 0) {
                fetch(`/Medicine/UpdatePrice/${id}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ price: parseFloat(price) })
                })
                .then(response => {
                    if (response.ok) {
                        location.reload();
                    } else {
                        alert('Fiyat güncellenirken bir hata oluştu.');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Bir hata oluştu.');
                });
            }
        }
    </script>

    <style>
        .medicine-icon {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 3rem;
        }

        .info-item label {
            font-size: 0.875rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .stat-item {
            padding: 1rem;
            border-radius: 8px;
            background: #f8f9fa;
            margin-bottom: 1rem;
        }

        .stat-item i {
            font-size: 2rem;
            display: block;
        }

        .card {
            transition: all 0.3s ease;
        }

        .card:hover {
            transform: translateY(-2px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
        }
    </style>
}
